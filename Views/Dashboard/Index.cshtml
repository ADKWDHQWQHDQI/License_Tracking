@section Scripts {
    <script>
        // Dashboard initialization
        document.addEventListener('DOMContentLoaded', function () {
            // Add subtle animations for Bigin.com feel
            initializeAnimations();
            
            // Load current projects analytics for dashboard
            loadCurrentProjectsAnalytics();
        });

        function initializeAnimations() {
            // Add animation classes if animate.css is available
            if (typeof window.anime !== 'undefined' || $('.animate__animated').length > 0) {
                $('.metric-card, .phase-card, .quick-action-btn').addClass('animate__animated animate__fadeInUp');
                
                // Stagger animations
                $('.metric-card').each(function(index) {
                    $(this).css('animation-delay', (index * 0.1) + 's');
                });
            }
        }

        async function loadCurrentProjectsAnalytics() {
            try {
                const response = await fetch('@Url.Action("GetPipelineAnalyticsSummary", "ProjectPipeline")');
                if (!response.ok) throw new Error('Failed to load analytics');

                const data = await response.json();
                updateCurrentProjectsDisplay(data);
            } catch (error) {
                console.error('Error loading current projects analytics:', error);
                const marginElement = document.getElementById('currentProjectsMargin');
                if (marginElement) {
                    marginElement.textContent = 'Error loading';
                }
            }
        }

        function updateCurrentProjectsDisplay(data) {
            const marginElement = document.getElementById('currentProjectsMargin');
            if (marginElement && data && typeof data.TotalEstimatedMargin !== 'undefined') {
                // Show margin and project count
                const marginText = formatCurrency(data.TotalEstimatedMargin) +
                    ' (' + data.ActiveProjectsCount + ' projects)';
                marginElement.textContent = marginText;
                marginElement.title =
                    'Estimated Revenue: ' + formatCurrency(data.TotalEstimatedRevenue) + '\n' +
                    'Weighted Revenue: ' + formatCurrency(data.TotalWeightedRevenue) + '\n' +
                    'Estimated Margin: ' + formatCurrency(data.TotalEstimatedMargin) + '\n' +
                    'Active Projects: ' + data.ActiveProjectsCount;
            } else if (marginElement) {
                marginElement.textContent = 'No data';
            }
        }

        function formatCurrency(amount) {
            return new Intl.NumberFormat('en-US', {
                style: 'currency',
                currency: 'USD',
                minimumFractionDigits: 0,
                maximumFractionDigits: 0
            }).format(amount || 0);
        }
    </script>
