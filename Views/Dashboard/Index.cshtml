@section Scripts {
    <script>
        // Enhanced Bigin.com-style Dashboard initialization for enterprise interactivity
        document.addEventListener('DOMContentLoaded', function () {
            // Initialize Bootstrap tooltips for added interactivity
            const tooltipTriggerList = document.querySelectorAll('[data-bs-toggle="tooltip"]');
            const tooltipList = [...tooltipTriggerList].map(tooltipTriggerEl => new bootstrap.Tooltip(tooltipTriggerEl));

            // Initialize smooth animations for metric cards
            initializeBiginAnimations();

            // Add interactive hover effects and ripples
            initializeInteractiveEffects();
        });

        function initializeBiginAnimations() {
            // Animate metric cards on load with stagger
            const metricCards = document.querySelectorAll('.bigin-metric-card, .bigin-insight-card, .quick-action-btn');
            metricCards.forEach((card, index) => {
                card.style.opacity = '0';
                card.style.transform = 'translateY(30px)';

                setTimeout(() => {
                    card.style.transition = 'all 0.8s cubic-bezier(0.4, 0, 0.2, 1)';
                    card.style.opacity = '1';
                    card.style.transform = 'translateY(0)';
                }, index * 150); // Increased stagger for smoother entrance
            });

            // Animate admin panel if present
            const adminPanel = document.querySelector('.bigin-admin-panel');
            if (adminPanel) {
                adminPanel.style.opacity = '0';
                adminPanel.style.transform = 'translateY(40px)';
                adminPanel.style.transition = 'all 1s cubic-bezier(0.4, 0, 0.2, 1)';

                setTimeout(() => {
                    adminPanel.style.opacity = '1';
                    adminPanel.style.transform = 'translateY(0)';
                }, 600);
            }
        }

        function initializeInteractiveEffects() {
            // Enhanced ripple effect on metric cards and buttons
            const interactiveElements = document.querySelectorAll('.bigin-metric-card, .quick-action-btn, .bigin-insight-card');
            interactiveElements.forEach(el => {
                el.addEventListener('click', function (e) {
                    const ripple = document.createElement('div');
                    const rect = this.getBoundingClientRect();
                    const size = Math.max(rect.width, rect.height) * 1.5; // Larger ripple for enterprise feel
                    const x = e.clientX - rect.left - size / 2;
                    const y = e.clientY - rect.top - size / 2;

                    ripple.style.cssText = `
                                position: absolute;
                                width: ${size}px;
                                height: ${size}px;
                                left: ${x}px;
                                top: ${y}px;
                                background: rgba(102, 126, 234, 0.15);
                                border-radius: 50%;
                                transform: scale(0);
                                animation: ripple 0.8s ease-out;
                                pointer-events: none;
                                z-index: 1;
                            `;

                    this.style.position = 'relative';
                    this.style.overflow = 'hidden';
                    this.appendChild(ripple);

                    setTimeout(() => {
                        ripple.remove();
                    }, 800);
                });
            });

            // Pulse animation on live data badge with smoother timing
            const liveBadge = document.querySelector('.bigin-metric-badge .badge');
            if (liveBadge) {
                setInterval(() => {
                    liveBadge.style.transform = 'scale(1.1)';
                    liveBadge.style.transition = 'transform 0.3s ease';
                    setTimeout(() => {
                        liveBadge.style.transform = 'scale(1)';
                    }, 300);
                }, 2000); // Adjusted interval
            }
        }

        // Format currency for display (kept as is)
        function formatCurrency(amount) {
            return new Intl.NumberFormat('en-IN', {
                style: 'currency',
                currency: 'INR',
                minimumFractionDigits: 0,
                maximumFractionDigits: 0
            }).format(amount || 0);
        }

        // Utility function for smooth scrolling to sections (kept as is)
        function scrollToSection(sectionId) {
            const element = document.getElementById(sectionId);
            if (element) {
                element.scrollIntoView({
                    behavior: 'smooth',
                    block: 'start'
                });
            }
        }
    </script>
