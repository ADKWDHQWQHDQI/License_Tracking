                <div class="bigin-metric-icon bg-primary-soft">
                    <i class="fas fa-building text-primary"></i>
                </div>
                <div class="bigin-metric-content">
                    <div class="bigin-metric-value text-dark">@Model.TotalCompanies</div>
                    <div class="bigin-metric-label text-muted">Total Companies</div>
                    <div class="bigin-metric-description">
                        <span class="text-success me-2">
                            <i class="fas fa-users"></i> Active
                        </span>
                        Customers & prospects
                    </div>
                </div>
            </div>
            <div class="bigin-metric-footer">
                <a href="/Companies" class="bigin-metric-link">
                    View companies <i class="fas fa-arrow-right ms-1"></i>
