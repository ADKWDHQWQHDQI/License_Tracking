@model License_Tracking.ViewModels.OperationsViewModel
@{
    ViewData["Title"] = "Operations Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2><i class="fas fa-cogs"></i> Operations Dashboard</h2>
                <div class="btn-group" role="group">
                    <a href="@Url.Action("Index", "License")" class="btn btn-outline-primary">
                        <i class="fas fa-list"></i> View All Licenses
                    </a>
                    <a href="@Url.Action("Index", "Renewal")" class="btn btn-outline-success">
                        <i class="fas fa-sync-alt"></i> Renewal Management
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Key Metrics Cards -->
    <div class="row mb-4">
        <div class="col-lg-2 col-md-4 col-sm-6 mb-3">
            <div class="card bg-primary text-white h-100">
                <div class="card-body text-center">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h3 class="card-title">@Model.TotalLicenses</h3>
                            <p class="card-text">Total Licenses</p>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-list fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-2 col-md-4 col-sm-6 mb-3">
            <div class="card bg-success text-white h-100">
                <div class="card-body text-center">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h3 class="card-title">@Model.ActiveLicenses</h3>
                            <p class="card-text">Active Licenses</p>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-check-circle fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-2 col-md-4 col-sm-6 mb-3">
            <div class="card bg-danger text-white h-100">
                <div class="card-body text-center">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h3 class="card-title">@Model.ExpiredLicenses</h3>
                            <p class="card-text">Expired Licenses</p>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-times-circle fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-2 col-md-4 col-sm-6 mb-3">
            <div class="card bg-warning text-dark h-100">
                <div class="card-body text-center">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h3 class="card-title">@Model.ExpiringIn30Days</h3>
                            <p class="card-text">Expiring (30 Days)</p>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-exclamation-triangle fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-2 col-md-4 col-sm-6 mb-3">
            <div class="card bg-info text-white h-100">
                <div class="card-body text-center">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h3 class="card-title">@Model.ExpiringIn60Days</h3>
                            <p class="card-text">Expiring (60 Days)</p>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-clock fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-2 col-md-4 col-sm-6 mb-3">
            <div class="card bg-secondary text-white h-100">
                <div class="card-body text-center">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h3 class="card-title">@Model.ExpiringIn90Days</h3>
                            <p class="card-text">Expiring (90 Days)</p>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-calendar fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- License Status Chart -->
    <div class="row mb-4">
        <div class="col-lg-6 mb-3">
            <div class="card">
                <div class="card-header">
                    <h5><i class="fas fa-chart-pie"></i> License Status Distribution</h5>
                </div>
                <div class="card-body">
                    <canvas id="licenseStatusChart" width="400" height="200"></canvas>
                </div>
            </div>
        </div>

        <div class="col-lg-6 mb-3">
            <div class="card">
                <div class="card-header">
                    <h5><i class="fas fa-chart-bar"></i> Expiry Timeline</h5>
                </div>
                <div class="card-body">
                    <canvas id="expiryTimelineChart" width="400" height="200"></canvas>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Actions -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5><i class="fas fa-bolt"></i> Quick Operations</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-lg-3 col-md-6 mb-3">
                            <a href="@Url.Action("Create", "License")" class="btn btn-primary btn-lg btn-block">
                                <i class="fas fa-plus"></i><br>
                                Add New License
                            </a>
                        </div>
                        <div class="col-lg-3 col-md-6 mb-3">
                            <a href="@Url.Action("Index", "Renewal")" class="btn btn-success btn-lg btn-block">
                                <i class="fas fa-sync-alt"></i><br>
                                Manage Renewals
                            </a>
                        </div>
                        <div class="col-lg-3 col-md-6 mb-3">
                            <a href="@Url.Action("Index", "Notification")" class="btn btn-warning btn-lg btn-block">
                                <i class="fas fa-bell"></i><br>
                                View Alerts
                            </a>
                        </div>
                        <div class="col-lg-3 col-md-6 mb-3">
                            <a href="@Url.Action("Index", "Report")" class="btn btn-info btn-lg btn-block">
                                <i class="fas fa-chart-line"></i><br>
                                Generate Reports
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        // License Status Pie Chart
        const statusCtx = document.getElementById('licenseStatusChart').getContext('2d');
        const statusChart = new Chart(statusCtx, {
            type: 'pie',
            data: {
                labels: ['Active', 'Expired'],
                datasets: [{
                    data: [@Model.ActiveLicenses, @Model.ExpiredLicenses],
                    backgroundColor: [
                        '#28a745',
                        '#dc3545'
                    ],
                    borderWidth: 2
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    legend: {
                        position: 'bottom'
                    }
                }
            }
        });

        // Expiry Timeline Bar Chart
        const expiryCtx = document.getElementById('expiryTimelineChart').getContext('2d');
        const expiryChart = new Chart(expiryCtx, {
            type: 'bar',
            data: {
                labels: ['30 Days', '60 Days', '90 Days'],
                datasets: [{
                    label: 'Licenses Expiring',
                    data: [@Model.ExpiringIn30Days, @Model.ExpiringIn60Days, @Model.ExpiringIn90Days],
                    backgroundColor: [
                        '#ffc107',
                        '#17a2b8',
                        '#6c757d'
                    ],
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                scales: {
                    y: {
                        beginAtZero: true,
                        ticks: {
                            stepSize: 1
                        }
                    }
                },
                plugins: {
                    legend: {
                        display: false
                    }
                }
            }
        });
    </script>
}
