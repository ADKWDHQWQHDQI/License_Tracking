@model IEnumerable<License_Tracking.ViewModels.RenewalViewModel>

@{
    ViewData["Title"] = "Renewal Pipeline";
}

<div class="container-fluid">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2><i class="fas fa-calendar-alt text-primary"></i> Renewal Pipeline</h2>
            <p class="text-muted mb-0">Manage license renewals and upcoming expirations</p>
        </div>
        <div>
            <a asp-action="ConfigureReminders" class="btn btn-primary">
                <i class="fas fa-cog"></i> Configure New Reminder
            </a>
            @if (User.IsInRole("Admin") || User.IsInRole("Finance"))
            {
                <a asp-controller="InvoiceManagement" asp-action="Index" class="btn btn-outline-info">
                    <i class="fas fa-money-bill-wave"></i> Invoice Management
                </a>
            }
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <!-- Summary Cards -->
    <div class="row mb-4">
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card border-primary">
                <div class="card-body text-center">
                    <div class="text-primary">
                        <i class="fas fa-clock fa-2x mb-2"></i>
                    </div>
                    <h4 class="text-primary">@Model.Count(m => m.Status == "Pending")</h4>
                    <small class="text-muted">Pending Renewals</small>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card border-warning">
                <div class="card-body text-center">
                    <div class="text-warning">
                        <i class="fas fa-exclamation-triangle fa-2x mb-2"></i>
                    </div>
                    <h4 class="text-warning">@Model.Count(m => m.Status == "Suggested")</h4>
                    <small class="text-muted">Suggested Renewals</small>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card border-info">
                <div class="card-body text-center">
                    <div class="text-info">
                        <i class="fas fa-project-diagram fa-2x mb-2"></i>
                    </div>
                    <h4 class="text-info">@Model.Count(m => m.Status == "Pipeline")</h4>
                    <small class="text-muted">Pipeline Projects</small>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card border-success">
                <div class="card-body text-center">
                    <div class="text-success">
                        <i class="fas fa-dollar-sign fa-2x mb-2"></i>
                    </div>
                    <h4 class="text-success">@Model.Sum(m => m.RenewalAmount).ToString("C0")</h4>
                    <small class="text-muted">Total Renewal Value</small>
                </div>
            </div>
        </div>
    </div>

    <div class="card">
        <div class="card-header bg-light">
            <h5 class="mb-0"><i class="fas fa-table"></i> Renewal Pipeline Details</h5>
        </div>
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover mb-0">
                    <thead class="table-light">
                        <tr>
                            <th>Type</th>
                            <th>Deal Info</th>
                            <th>Product & Company</th>
                            <th>Renewal Date</th>
                            <th>Amount</th>
                            <th>Status</th>
                            <th>License Details</th>
                            <th>Remarks</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr
                                class="@(item.Status == "Suggested" ? "table-warning" : item.Status == "Pipeline" ? "table-info" : "")">
                                <td>
                                    <span
                                        class="badge @(item.Type == "License" ? "bg-success" : item.Type == "License Expiry" ? "bg-warning" : "bg-info")">
                                        <i
                                            class="fas @(item.Type == "License" ? "fa-check-circle" : item.Type == "License Expiry" ? "fa-exclamation-triangle" : "fa-project-diagram")"></i>
                                        @item.Type
                                    </span>
                                </td>
                                <td>
                                    @if (item.DealId.HasValue)
                                    {
                                        <strong>Deal #@item.DealId</strong>
                                        <br>

                                        <small class="text-muted">License ID: @(item.LicenseId ?? item.DealId)</small>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Pipeline Project</span>
                                        <br>

                                        <small class="text-muted">Project #@item.ProjectPipelineId</small>
                                    }
                                </td>
                                <td>
                                    <strong>@item.ProductName</strong>
                                    <br><small class="text-muted">@item.ClientName</small>
                                </td>
                                <td>
                                    <strong>@item.RenewalDate.ToString("MMM dd, yyyy")</strong>
                                    <br><small class="text-muted">
                                        @{
                                            var daysUntil = (item.RenewalDate - DateTime.Now).Days;
                                        }
                                        @if (daysUntil < 0)
                                        {
                                            <span class="text-danger">@Math.Abs(daysUntil) days overdue</span>
                                        }
                                        else if (daysUntil == 0)
                                        {
                                            <span class="text-warning">Due today</span>
                                        }
                                        else if (daysUntil <= 30)
                                        {
                                            <span class="text-warning">@daysUntil days remaining</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">@daysUntil days remaining</span>
                                        }
                                    </small>
                                </td>
                                <td>
                                    <strong>@item.RenewalAmount.ToString("C")</strong>
                                </td>
                                <td>
                                    <span
                                        class="badge @(item.Status == "Pending" ? "bg-warning" : item.Status == "Suggested" ? "bg-info" : item.Status == "Pipeline" ? "bg-secondary" : "bg-light text-dark")">
                                        @item.Status
                                    </span>
                                </td>
                                <td>
                                    @if (item.LicenseEndDate.HasValue)
                                    {
                                        <small class="text-muted">
                                            <strong>Expires:</strong> @item.LicenseEndDate.Value.ToString("MMM dd, yyyy")
                                            <br><strong>Status:</strong> @(item.LicenseStatus ?? "N/A")
                                        </small>
                                    }
                                    else
                                    {
                                        <small class="text-muted">Pipeline project</small>
                                    }
                                </td>
                                <td>
                                    <small>@item.Remarks</small>
                                </td>
                                <td>
                                    <div class="btn-group-vertical" role="group">
                                        @if (item.Status == "Suggested" && item.DealId.HasValue)
                                        {
                                            <a asp-action="ConfigureReminders" class="btn btn-sm btn-primary mb-1"
                                                title="Configure renewal reminder for this deal">
                                                <i class="fas fa-plus"></i> Configure
                                            </a>
                                        }
                                        @if (item.DealId.HasValue)
                                        {
                                            <a asp-controller="Deals" asp-action="Details" asp-route-id="@item.DealId"
                                                class="btn btn-sm btn-outline-info mb-1" title="View deal details">
                                                <i class="fas fa-eye"></i> View Deal
                                            </a>
                                        }
                                        @if (item.RenewalId > 0)
                                        {
                                            <button class="btn btn-sm btn-outline-success mb-1" title="Mark as renewed">
                                                <i class="fas fa-check"></i> Mark Renewed
                                            </button>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center mt-4">
            <div class="mb-3">
                <i class="fas fa-info-circle fa-3x text-info"></i>
            </div>
            <h5>No Renewals Found</h5>
            <p class="mb-3">No renewal reminders or upcoming license expirations found.</p>
            <a asp-action="ConfigureReminders" class="btn btn-primary">
                <i class="fas fa-plus"></i> Configure Your First Renewal Reminder
            </a>
        </div>
    }
</div>
