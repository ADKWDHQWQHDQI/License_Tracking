@model IEnumerable<dynamic>

@{
    ViewData["Title"] = "Renewal Pipeline";
}

<div class="container">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2><i class="fas fa-calendar-alt"></i> Renewal Pipeline</h2>
        <div>
            <a asp-action="ConfigureReminders" class="btn btn-primary">
                <i class="fas fa-cog"></i> Configure Reminders
            </a>
            @if (User.IsInRole("Admin") || User.IsInRole("Finance"))
            {
                <a asp-controller="Billing" asp-action="PaymentStatus" class="btn btn-outline-info">
                    <i class="fas fa-money-bill-wave"></i> View Billing
                </a>
            }
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Renewal ID</th>
                <th>Deal ID</th>
                <th>Product Name</th>
                <th>Company Name</th>
                <th>Renewal Date</th>
                <th>Renewal Amount</th>
                <th>Remarks</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.RenewalId</td>
                    <td>@item.DealId</td>
                    <td>@(item.Deal?.Product?.ProductName ?? "N/A")</td>
                    <td>@(item.Deal?.Company?.CompanyName ?? "N/A")</td>
                    <td>@item.RenewalDate.ToString("yyyy-MM-dd")</td>
                    <td>@item.RenewalAmount.ToString("C")</td>
                    <td>@item.Remarks</td>
                    <td>@item.Status</td>
                </tr>
            }
        </tbody>
    </table>
</div>
