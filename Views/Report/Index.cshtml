@model License_Tracking.ViewModels.ReportDashboardViewModel
@{
    ViewData["Title"] = "Enhanced Reporting Dashboard";
}

<link rel="stylesheet" href="~/css/analytics-compact.css" />

<div class="container-fluid reports-analytics-compact">
    <div class="row">
        <div class="col-12">
            <h2><i class="fas fa-chart-line"></i> Enhanced Reporting Dashboard</h2>
            <p class="text-muted">Comprehensive business intelligence and financial analysis reports</p>
        </div>
    </div>

    <!-- Summary Cards -->
    <div class="row mb-4">
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card bg-primary text-white h-100" style="max-height: 140px;">
                <div class="card-body p-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h5 class="mb-1" style="font-size: 1.3rem;">@Model.TotalDeals</h5>
                            <p class="mb-0" style="font-size: 0.8rem;">Total Deals</p>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-certificate fa-lg opacity-75"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card bg-success text-white h-100" style="max-height: 140px;">
                <div class="card-body p-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h5 class="mb-1" style="font-size: 1.3rem;">@Model.TotalRevenue.ToString("C")</h5>
                            <p class="mb-0" style="font-size: 0.8rem;">Total Revenue</p>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-dollar-sign fa-lg opacity-75"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card bg-warning text-white h-100" style="max-height: 140px;">
                <div class="card-body p-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h5 class="mb-1" style="font-size: 1.3rem;">@Model.TotalCosts.ToString("C")</h5>
                            <p class="mb-0" style="font-size: 0.8rem;">Total Costs</p>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-coins fa-lg opacity-75"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card bg-info text-white h-100" style="max-height: 140px;">
                <div class="card-body p-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h5 class="mb-1" style="font-size: 1.3rem;">@Model.TotalMargin.ToString("C")</h5>
                            <p class="mb-0" style="font-size: 0.8rem;">Total Margin</p>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-chart-line fa-lg opacity-75"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Pipeline Analytics Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card border-primary">
                <div class="card-header bg-primary text-white py-2">
                    <h6 class="mb-0" style="font-size: 0.9rem;"><i class="fas fa-project-diagram"></i> Current Projects
                        Analytics</h6>
                </div>
                <div class="card-body p-3">
                    <div class="row">
                        <div class="col-md-3 col-6 mb-2">
                            <div class="text-center">
                                <h6 class="text-muted" style="font-size: 0.75rem;">Pipeline Margin</h6>
                                <h5 class="text-success mb-0" id="pipelineMargin" style="font-size: 1.1rem;">Loading...
                                </h5>
                            </div>
                        </div>
                        <div class="col-md-3 col-6 mb-2">
                            <div class="text-center">
                                <h6 class="text-muted" style="font-size: 0.75rem;">Pipeline Revenue</h6>
                                <h5 class="text-primary mb-0" id="pipelineRevenue" style="font-size: 1.1rem;">Loading...
                                </h5>
                            </div>
                        </div>
                        <div class="col-md-3 col-6 mb-2">
                            <div class="text-center">
                                <h6 class="text-muted" style="font-size: 0.75rem;">Weighted Revenue</h6>
                                <h5 class="text-info mb-0" id="weightedRevenue" style="font-size: 1.1rem;">Loading...
                                </h5>
                            </div>
                        </div>
                        <div class="col-md-3 col-6 mb-2">
                            <div class="text-center">
                                <h6 class="text-muted" style="font-size: 0.75rem;">Active Projects</h6>
                                <h5 class="text-warning mb-0" id="activeProjects" style="font-size: 1.1rem;">Loading...
                                </h5>
                            </div>
                        </div>
                    </div>
                    <div class="mt-2 text-center">
                        <a asp-controller="ProjectPipeline" asp-action="PipelineAnalytics"
                            class="btn btn-primary btn-sm">
                            <i class="fas fa-chart-area"></i> View Detailed Pipeline Analytics
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Access Reports -->
    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5><i class="fas fa-chart-bar"></i> Financial Analysis Reports</h5>
                </div>
                <div class="card-body">
                    <div class="list-group list-group-flush">
                        <a href="@Url.Action("MonthlyRevenueAnalytics")" class="list-group-item list-group-item-action">
                            <i class="fas fa-chart-line"></i> Monthly Revenue Analytics
                            <small class="text-muted d-block">Comprehensive monthly revenue trends and analytics</small>
                        </a>
                        <a href="@Url.Action("MarginBreakup")" class="list-group-item list-group-item-action">
                            <i class="fas fa-percentage"></i> Margin Breakup Analysis
                            <small class="text-muted d-block">Detailed margin analysis by OEM and client</small>
                        </a>
                        <a href="@Url.Action("RevenueBreakdown")" class="list-group-item list-group-item-action">
                            <i class="fas fa-chart-pie"></i> Revenue Breakdown
                            <small class="text-muted d-block">Revenue analysis grouped by OEM or client</small>
                        </a>
                        <a href="@Url.Action("ProfitAnalysis")" class="list-group-item list-group-item-action">
                            <i class="fas fa-calculator"></i> Profit Analysis
                            <small class="text-muted d-block">Comprehensive profit analysis with drill-down</small>
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5><i class="fas fa-users"></i> Customer & OEM Reports</h5>
                </div>
                <div class="card-body">
                    <div class="list-group list-group-flush">
                        <a href="@Url.Action("CustomerProfitability")" class="list-group-item list-group-item-action">
                            <i class="fas fa-trophy"></i> Customer Profitability Rankings
                            <small class="text-muted d-block">Top customers by profitability and revenue</small>
                        </a>
                        <a href="@Url.Action("OemCostEfficiency")" class="list-group-item list-group-item-action">
                            <i class="fas fa-industry"></i> OEM Cost Efficiency Analysis
                            <small class="text-muted d-block">OEM cost efficiency and margin analysis</small>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Top Performers -->
    <div class="row mt-4">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5><i class="fas fa-star"></i> Top 5 Customers by Profit</h5>
                </div>
                <div class="card-body">
                    @if (Model.TopCustomers.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-sm">
                                <thead>
                                    <tr>
                                        <th>Rank</th>
                                        <th>Customer</th>
                                        <th>Profit</th>
                                        <th>Margin %</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var customer in Model.TopCustomers)
                                    {
                                        <tr>
                                            <td><span class="badge badge-primary">@customer.Rank</span></td>
                                            <td>@customer.CustomerName</td>
                                            <td>@customer.TotalProfit.ToString("C")</td>
                                            <td>@customer.ProfitMarginPercentage.ToString("F1")%</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted">No customer data available</p>
                    }
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h5><i class="fas fa-cog"></i> Top 5 OEMs by Efficiency</h5>
                </div>
                <div class="card-body">
                    @if (Model.TopOEMs.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-sm">
                                <thead>
                                    <tr>
                                        <th>Rank</th>
                                        <th>OEM</th>
                                        <th>Efficiency Ratio</th>
                                        <th>Margin %</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var oem in Model.TopOEMs)
                                    {
                                        <tr>
                                            <td><span class="badge badge-success">@oem.EfficiencyRank</span></td>
                                            <td>@oem.OemName</td>
                                            <td>@oem.CostEfficiencyRatio.ToString("F2")</td>
                                            <td>@oem.MarginPercentage.ToString("F1")%</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted">No OEM data available</p>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Export Options -->
    <div class="row mt-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5><i class="fas fa-download"></i> Export Reports</h5>
                </div>
                <div class="card-body">
                    <div class="btn-group" role="group">
                        <a href="@Url.Action("ExportRevenueAnalytics")" class="btn btn-success" target="_blank">
                            <i class="fas fa-file-excel"></i> Export Revenue Analytics (Excel)
                        </a>
                        <a href="@Url.Action("ExportMarginBreakupExcel")" class="btn btn-success" target="_blank">
                            <i class="fas fa-file-excel"></i> Export Margin Breakup (Excel)
                        </a>
                        <a href="@Url.Action("ExportCustomerProfitabilityExcel")" class="btn btn-success"
                            target="_blank">
                            <i class="fas fa-file-excel"></i> Export Customer Profitability (Excel)
                        </a>
                        <button class="btn btn-info" onclick="openBulkVisualization()">
                            <i class="fas fa-chart-line"></i> Bulk Data Visualization
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Add any JavaScript for dashboard interactivity
        $(document).ready(function () {
            // Initialize tooltips
            $('[data-toggle="tooltip"]').tooltip();

            // Load pipeline analytics
            loadPipelineAnalytics();
        });

        async function loadPipelineAnalytics() {
            try {
                const response = await fetch('@Url.Action("GetPipelineAnalyticsSummary", "ProjectPipeline")');
                if (!response.ok) throw new Error('Failed to load analytics');

                const data = await response.json();
                updatePipelineDisplay(data);
            } catch (error) {
                console.error('Error loading pipeline analytics:', error);
                document.getElementById('pipelineMargin').textContent = 'Error loading';
                document.getElementById('pipelineRevenue').textContent = 'Error loading';
                document.getElementById('weightedRevenue').textContent = 'Error loading';
                document.getElementById('activeProjects').textContent = 'Error loading';
            }
        }

        function updatePipelineDisplay(data) {
            if (data && typeof data.TotalEstimatedMargin !== 'undefined') {
                document.getElementById('pipelineMargin').textContent = formatCurrency(data.TotalEstimatedMargin);
                document.getElementById('pipelineRevenue').textContent = formatCurrency(data.TotalEstimatedRevenue);
                document.getElementById('weightedRevenue').textContent = formatCurrency(data.TotalWeightedRevenue);
                document.getElementById('activeProjects').textContent = data.ActiveProjectsCount;
            } else {
                document.getElementById('pipelineMargin').textContent = 'No data';
                document.getElementById('pipelineRevenue').textContent = 'No data';
                document.getElementById('weightedRevenue').textContent = 'No data';
                document.getElementById('activeProjects').textContent = '0';
            }
        }

        function formatCurrency(amount) {
            return new Intl.NumberFormat('en-US', {
                style: 'currency',
                currency: 'USD',
                minimumFractionDigits: 0,
                maximumFractionDigits: 0
            }).format(amount || 0);
        }

        function openBulkVisualization() {
            // Open a comprehensive visualization
            alert('Opening comprehensive data visualization...');
            // This could open a modal with multiple charts or redirect to a dedicated visualization page
        }
    </script>
}
