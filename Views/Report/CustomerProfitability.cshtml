@model IEnumerable<License_Tracking.ViewModels.CustomerProfitabilityViewModel>
@{
    ViewData["Title"] = "Customer Profitability Analysis";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h2><i class="fas fa-users"></i> Customer Profitability Analysis</h2>
            <p class="text-muted">Profitability analysis by customer with revenue and margin insights</p>
        </div>
    </div>

    <!-- Filter Section -->
    <div class="card mb-4">
        <div class="card-header">
            <h5><i class="fas fa-filter"></i> Filters</h5>
        </div>
        <div class="card-body">
            <form method="get" asp-action="CustomerProfitability">
                <div class="row">
                    <div class="col-md-3">
                        <label for="startDate" class="form-label">Start Date</label>
                        <input type="date" class="form-control" id="startDate" name="startDate" value="@ViewBag.StartDate?.ToString("yyyy-MM-dd")" />
                    </div>
                    <div class="col-md-3">
                        <label for="endDate" class="form-label">End Date</label>
                        <input type="date" class="form-control" id="endDate" name="endDate" value="@ViewBag.EndDate?.ToString("yyyy-MM-dd")" />
                    </div>
                    <div class="col-md-3">
                        <label for="customerFilter" class="form-label">Customer Filter</label>
                        <input type="text" class="form-control" id="customerFilter" name="customerFilter" value="@ViewBag.CustomerFilter" placeholder="Customer Name" />
                    </div>
                    <div class="col-md-3 d-flex align-items-end">
                        <button type="submit" class="btn btn-primary me-2">Apply Filters</button>
                        <a href="@Url.Action("CustomerProfitability")" class="btn btn-secondary">Clear</a>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Export Actions -->
    <div class="card mb-4">
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-center">
                <h5 class="mb-0">Export Options</h5>
                <div>
                    <a href="@Url.Action("ExportCustomerProfitabilityExcel", new { startDate = ViewBag.StartDate, endDate = ViewBag.EndDate, customerFilter = ViewBag.CustomerFilter })" 
                       class="btn btn-success me-2">
                        <i class="fas fa-file-excel"></i> Export to Excel
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Results -->
    <div class="card">
        <div class="card-header">
            <h5><i class="fas fa-table"></i> Customer Profitability Results (@Model.Count() customers)</h5>
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover" id="customerTable">
                        <thead class="table-dark">
                            <tr>
                                <th>Customer Name</th>
                                <th>Total Revenue</th>
                                <th>Total Costs</th>
                                <th>Total Profit</th>
                                <th>License Count</th>
                                <th>Avg Revenue/License</th>
                                <th>Profit Margin %</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="fw-bold">@item.CustomerName</td>
                                    <td class="text-success">@item.TotalRevenue.ToString("C")</td>
                                    <td class="text-danger">@item.TotalCosts.ToString("C")</td>
                                    <td class="text-primary fw-bold">@item.TotalProfit.ToString("C")</td>
                                    <td><span class="badge bg-info">@item.LicenseCount</span></td>
                                    <td>@item.AvgRevenuePerLicense.ToString("C")</td>
                                    <td>
                                        @if (item.ProfitMarginPercentage >= 25)
                                        {
                                            <span class="badge bg-success">@item.ProfitMarginPercentage.ToString("F1")%</span>
                                        }
                                        else if (item.ProfitMarginPercentage >= 15)
                                        {
                                            <span class="badge bg-warning text-dark">@item.ProfitMarginPercentage.ToString("F1")%</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">@item.ProfitMarginPercentage.ToString("F1")%</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Summary Statistics -->
                <div class="row mt-4">
                    <div class="col-md-3">
                        <div class="card bg-light">
                            <div class="card-body text-center">
                                <h5>@Model.Sum(c => c.TotalRevenue).ToString("C")</h5>
                                <p class="mb-0 text-muted">Total Revenue</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card bg-light">
                            <div class="card-body text-center">
                                <h5>@Model.Sum(c => c.TotalCosts).ToString("C")</h5>
                                <p class="mb-0 text-muted">Total Costs</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card bg-light">
                            <div class="card-body text-center">
                                <h5>@Model.Sum(c => c.TotalProfit).ToString("C")</h5>
                                <p class="mb-0 text-muted">Total Profit</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card bg-light">
                            <div class="card-body text-center">
                                <h5>@((Model.Sum(c => c.TotalRevenue) > 0 ? (Model.Sum(c => c.TotalProfit) / Model.Sum(c => c.TotalRevenue)) * 100 : 0).ToString("F1"))%</h5>
                                <p class="mb-0 text-muted">Overall Margin %</p>
                            </div>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    <i class="fas fa-info-circle"></i> No customer profitability data found for the selected criteria.
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#customerTable').DataTable({
                "pageLength": 25,
                "order": [[ 3, "desc" ]], // Sort by Total Profit descending
                "columnDefs": [
                    { "type": "currency", "targets": [1, 2, 3, 5] }
                ]
            });
        });
    </script>
}