@model IEnumerable<License_Tracking.ViewModels.RevenueBreakdownViewModel>
@{
    ViewData["Title"] = "Revenue Breakdown Analysis";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h2><i class="fas fa-chart-pie"></i> Revenue Breakdown Analysis</h2>
            <p class="text-muted">Revenue analysis grouped by OEM or client with cost breakdown</p>
        </div>
    </div>

    <!-- Filter Section -->
    <div class="card mb-4">
        <div class="card-header">
            <h5><i class="fas fa-filter"></i> Filters</h5>
        </div>
        <div class="card-body">
            <form method="get" asp-action="RevenueBreakdown">
                <div class="row">
                    <div class="col-md-3">
                        <label for="startDate" class="form-label">Start Date</label>
                        <input type="date" class="form-control" id="startDate" name="startDate" value="@ViewBag.StartDate?.ToString("yyyy-MM-dd")" />
                    </div>
                    <div class="col-md-3">
                        <label for="endDate" class="form-label">End Date</label>
                        <input type="date" class="form-control" id="endDate" name="endDate" value="@ViewBag.EndDate?.ToString("yyyy-MM-dd")" />
                    </div>
                    <div class="col-md-3">
                        <label for="groupBy" class="form-label">Group By</label>
                        <select class="form-select" id="groupBy" name="groupBy">
                            <option value="OEM" selected="@(ViewBag.GroupBy == "OEM")">OEM</option>
                            <option value="Client" selected="@(ViewBag.GroupBy == "Client")">Client</option>
                        </select>
                    </div>
                    <div class="col-md-3 d-flex align-items-end">
                        <button type="submit" class="btn btn-primary me-2">Apply Filters</button>
                        <a href="@Url.Action("RevenueBreakdown")" class="btn btn-secondary">Clear</a>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Results -->
    <div class="card">
        <div class="card-header">
            <h5><i class="fas fa-table"></i> Revenue Breakdown Results (@Model.Count() groups)</h5>
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover" id="revenueTable">
                        <thead class="table-dark">
                            <tr>
                                @if (ViewBag.GroupBy == "Client")
                                {
                                    <th>Client Name</th>
                                }
                                else
                                {
                                    <th>OEM Name</th>
                                }
                                <th>Total Revenue</th>
                                <th>Total Costs</th>
                                <th>Total Margin</th>
                                <th>License Count</th>
                                <th>Avg Margin/License</th>
                                <th>Profit Margin %</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td class="fw-bold">
                                        @if (ViewBag.GroupBy == "Client")
                                        {
                                            @item.ClientName
                                        }
                                        else
                                        {
                                            @item.OemName
                                        }
                                    </td>
                                    <td class="text-success">@item.TotalRevenue.ToString("C")</td>
                                    <td class="text-danger">@item.TotalCosts.ToString("C")</td>
                                    <td class="text-primary fw-bold">@item.TotalMargin.ToString("C")</td>
                                    <td><span class="badge bg-info">@item.LicenseCount</span></td>
                                    <td>@item.AvgMarginPerLicense.ToString("C")</td>
                                    <td>
                                        @if (item.ProfitMarginPercentage >= 25)
                                        {
                                            <span class="badge bg-success">@item.ProfitMarginPercentage.ToString("F1")%</span>
                                        }
                                        else if (item.ProfitMarginPercentage >= 15)
                                        {
                                            <span class="badge bg-warning text-dark">@item.ProfitMarginPercentage.ToString("F1")%</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">@item.ProfitMarginPercentage.ToString("F1")%</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Summary Statistics -->
                <div class="row mt-4">
                    <div class="col-md-3">
                        <div class="card bg-light">
                            <div class="card-body text-center">
                                <h5>@Model.Sum(r => r.TotalRevenue).ToString("C")</h5>
                                <p class="mb-0 text-muted">Total Revenue</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card bg-light">
                            <div class="card-body text-center">
                                <h5>@Model.Sum(r => r.TotalCosts).ToString("C")</h5>
                                <p class="mb-0 text-muted">Total Costs</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card bg-light">
                            <div class="card-body text-center">
                                <h5>@Model.Sum(r => r.TotalMargin).ToString("C")</h5>
                                <p class="mb-0 text-muted">Total Margin</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="card bg-light">
                            <div class="card-body text-center">
                                <h5>@((Model.Sum(r => r.TotalRevenue) > 0 ? (Model.Sum(r => r.TotalMargin) / Model.Sum(r => r.TotalRevenue)) * 100 : 0).ToString("F1"))%</h5>
                                <p class="mb-0 text-muted">Overall Margin %</p>
                            </div>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    <i class="fas fa-info-circle"></i> No revenue breakdown data found for the selected criteria.
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#revenueTable').DataTable({
                "pageLength": 25,
                "order": [[ 3, "desc" ]], // Sort by Total Margin descending
                "columnDefs": [
                    { "type": "currency", "targets": [1, 2, 3, 5] }
                ]
            });
        });
    </script>
}
