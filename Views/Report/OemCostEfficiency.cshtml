@model IEnumerable<License_Tracking.ViewModels.OemEfficiencyViewModel>
@{
    ViewData["Title"] = "OEM Cost Efficiency Analysis";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <h2><i class="fas fa-industry"></i> OEM Cost Efficiency Analysis</h2>
            <p class="text-muted">OEM cost efficiency and margin analysis ranked by performance</p>
        </div>
    </div>

    <!-- Filter Section -->
    <div class="card mb-4">
        <div class="card-header">
            <h5><i class="fas fa-filter"></i> Filters</h5>
        </div>
        <div class="card-body">
            <form method="get" asp-action="OemCostEfficiency">
                <div class="row">
                    <div class="col-md-3">
                        <label for="startDate" class="form-label">Start Date</label>
                        <input type="date" class="form-control" id="startDate" name="startDate" value="@ViewBag.StartDate?.ToString("yyyy-MM-dd")" />
                    </div>
                    <div class="col-md-3">
                        <label for="endDate" class="form-label">End Date</label>
                        <input type="date" class="form-control" id="endDate" name="endDate" value="@ViewBag.EndDate?.ToString("yyyy-MM-dd")" />
                    </div>
                    <div class="col-md-3">
                        <label for="topCount" class="form-label">Top Count</label>
                        <select class="form-select" id="topCount" name="topCount">
                            <option value="10" selected="@(ViewBag.TopCount == 10)">Top 10</option>
                            <option value="15" selected="@(ViewBag.TopCount == 15)">Top 15</option>
                            <option value="25" selected="@(ViewBag.TopCount == 25)">Top 25</option>
                            <option value="50" selected="@(ViewBag.TopCount == 50)">Top 50</option>
                        </select>
                    </div>
                    <div class="col-md-3 d-flex align-items-end">
                        <button type="submit" class="btn btn-primary me-2">Apply Filters</button>
                        <a href="@Url.Action("OemCostEfficiency")" class="btn btn-secondary">Clear</a>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <!-- Results -->
    <div class="card">
        <div class="card-header">
            <h5><i class="fas fa-table"></i> OEM Efficiency Results (@Model.Count() OEMs)</h5>
        </div>
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-striped table-hover" id="oemTable">
                        <thead class="table-dark">
                            <tr>
                                <th>Efficiency Rank</th>
                                <th>OEM Name</th>
                                <th>Total Costs</th>
                                <th>Total Revenue</th>
                                <th>Total Margin</th>
                                <th>License Count</th>
                                <th>Avg Cost/License</th>
                                <th>Avg Margin/License</th>
                                <th>Efficiency Ratio</th>
                                <th>Margin %</th>
                                <th>Last Purchase</th>
                                <th>Top Product</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var oem in Model)
                            {
                                <tr>
                                    <td>
                                        @if (oem.EfficiencyRank <= 3)
                                        {
                                            <span class="badge bg-warning text-dark"><i class="fas fa-trophy"></i> @oem.EfficiencyRank</span>
                                        }
                                        else if (oem.EfficiencyRank <= 10)
                                        {
                                            <span class="badge bg-primary">@oem.EfficiencyRank</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">@oem.EfficiencyRank</span>
                                        }
                                    </td>
                                    <td class="fw-bold">@oem.OemName</td>
                                    <td class="text-danger">@oem.TotalCosts.ToString("C")</td>
                                    <td class="text-success">@oem.TotalRevenue.ToString("C")</td>
                                    <td class="text-primary fw-bold">@oem.TotalMargin.ToString("C")</td>
                                    <td><span class="badge bg-info">@oem.LicenseCount</span></td>
                                    <td>@oem.AvgCostPerLicense.ToString("C")</td>
                                    <td>@oem.AvgMarginPerLicense.ToString("C")</td>
                                    <td>
                                        @if (oem.CostEfficiencyRatio >= 2.0m)
                                        {
                                            <span class="badge bg-success">@oem.CostEfficiencyRatio.ToString("F2")</span>
                                        }
                                        else if (oem.CostEfficiencyRatio >= 1.5m)
                                        {
                                            <span class="badge bg-warning text-dark">@oem.CostEfficiencyRatio.ToString("F2")</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">@oem.CostEfficiencyRatio.ToString("F2")</span>
                                        }
                                    </td>
                                    <td>
                                        @if (oem.MarginPercentage >= 25)
                                        {
                                            <span class="badge bg-success">@oem.MarginPercentage.ToString("F1")%</span>
                                        }
                                        else if (oem.MarginPercentage >= 15)
                                        {
                                            <span class="badge bg-warning text-dark">@oem.MarginPercentage.ToString("F1")%</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">@oem.MarginPercentage.ToString("F1")%</span>
                                        }
                                    </td>
                                    <td>@oem.LastPurchaseDate.ToString("yyyy-MM-dd")</td>
                                    <td><small class="text-muted">@oem.TopProduct</small></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Summary Statistics -->
                <div class="row mt-4">
                    <div class="col-md-2">
                        <div class="card bg-light">
                            <div class="card-body text-center">
                                <h5>@Model.Sum(o => o.TotalCosts).ToString("C")</h5>
                                <p class="mb-0 text-muted">Total Costs</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="card bg-light">
                            <div class="card-body text-center">
                                <h5>@Model.Sum(o => o.TotalRevenue).ToString("C")</h5>
                                <p class="mb-0 text-muted">Total Revenue</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="card bg-light">
                            <div class="card-body text-center">
                                <h5>@Model.Sum(o => o.TotalMargin).ToString("C")</h5>
                                <p class="mb-0 text-muted">Total Margin</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="card bg-light">
                            <div class="card-body text-center">
                                <h5>@Model.Sum(o => o.LicenseCount)</h5>
                                <p class="mb-0 text-muted">Total Licenses</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="card bg-light">
                            <div class="card-body text-center">
                                <h5>@((Model.Count() > 0 ? Model.Average(o => o.CostEfficiencyRatio) : 0).ToString("F2"))</h5>
                                <p class="mb-0 text-muted">Avg Efficiency</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="card bg-light">
                            <div class="card-body text-center">
                                <h5>@((Model.Count() > 0 ? Model.Average(o => o.MarginPercentage) : 0).ToString("F1"))%</h5>
                                <p class="mb-0 text-muted">Avg Margin</p>
                            </div>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="alert alert-info">
                    <i class="fas fa-info-circle"></i> No OEM efficiency data found for the selected criteria.
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#oemTable').DataTable({
                "pageLength": 25,
                "order": [[ 0, "asc" ]], // Sort by Efficiency Rank ascending
                "columnDefs": [
                    { "type": "currency", "targets": [2, 3, 4, 6, 7] },
                    { "orderable": false, "targets": [11] }
                ]
            });
        });
    </script>
}
