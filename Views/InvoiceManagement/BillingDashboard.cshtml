@{
    ViewData["Title"] = "Billing Dashboard";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-12">
            <h2 class="text-primary mb-4">
                <i class="fas fa-credit-card"></i> Billing & Invoice Dashboard
            </h2>
        </div>
    </div>

    <!-- Summary Cards -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card text-white bg-primary">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h5 class="card-title">Customer Invoices</h5>
                            <h3 class="mb-0">@Model.TotalCustomerInvoices</h3>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-file-invoice fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-warning">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h5 class="card-title">OEM Invoices</h5>
                            <h3 class="mb-0">@Model.TotalOemInvoices</h3>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-industry fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-success">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h5 class="card-title">Customer Pending</h5>
                            <h3 class="mb-0">@Model.PendingCustomerAmount.ToString("C")</h3>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-dollar-sign fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card text-white bg-danger">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <h5 class="card-title">OEM Pending</h5>
                            <h3 class="mb-0">@Model.PendingOemAmount.ToString("C")</h3>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-exclamation-triangle fa-2x"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Alert Section -->
    @if (Model.OverdueCustomerInvoices > 0 || Model.OverdueOemInvoices > 0)
    {
        <div class="row mb-4">
            <div class="col-md-12">
                <div class="alert alert-warning">
                    <h5><i class="fas fa-exclamation-triangle"></i> Overdue Invoices Alert</h5>
                    <div class="row">
                        @if (Model.OverdueCustomerInvoices > 0)
                        {
                            <div class="col-md-6">
                                <strong>Customer Invoices Overdue:</strong> @Model.OverdueCustomerInvoices
                                <a asp-action="AgingSummary" asp-route-invoiceType="Customer"
                                    class="btn btn-sm btn-outline-danger ms-2">
                                    View Details
                                </a>
                            </div>
                        }
                        @if (Model.OverdueOemInvoices > 0)
                        {
                            <div class="col-md-6">
                                <strong>OEM Invoices Overdue:</strong> @Model.OverdueOemInvoices
                                <a asp-action="AgingSummary" asp-route-invoiceType="OEM"
                                    class="btn btn-sm btn-outline-danger ms-2">
                                    View Details
                                </a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    }

    <!-- Quick Actions -->
    <div class="row mb-4">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-bolt"></i> Quick Actions
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-3 mb-2">
                            <a asp-action="Index" class="btn btn-primary w-100">
                                <i class="fas fa-list"></i> All Invoices
                            </a>
                        </div>
                        <div class="col-md-3 mb-2">
                            <a asp-action="Index" asp-route-phase="phase1" class="btn btn-success w-100">
                                <i class="fas fa-user"></i> Customer Invoices
                            </a>
                        </div>
                        <div class="col-md-3 mb-2">
                            <a asp-action="Index" asp-route-phase="phase4" class="btn btn-warning w-100">
                                <i class="fas fa-industry"></i> OEM Invoices
                            </a>
                        </div>
                        <div class="col-md-3 mb-2">
                            <a asp-action="AgingSummary" class="btn btn-info w-100">
                                <i class="fas fa-chart-bar"></i> Aging Summary
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Invoice Type Breakdown -->
    <div class="row mb-4">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h6 class="card-title mb-0">
                        <i class="fas fa-user"></i> Customer Invoices (Revenue Tracking)
                    </h6>
                </div>
                <div class="card-body">
                    <p class="text-muted">Track revenue from customer payments and outstanding amounts.</p>
                    <div class="d-flex justify-content-between">
                        <span>Total Invoices:</span>
                        <strong>@Model.TotalCustomerInvoices</strong>
                    </div>
                    <div class="d-flex justify-content-between">
                        <span>Pending Amount:</span>
                        <strong class="text-danger">@Model.PendingCustomerAmount.ToString("C")</strong>
                    </div>
                    <div class="d-flex justify-content-between">
                        <span>Overdue Invoices:</span>
                        <strong class="text-warning">@Model.OverdueCustomerInvoices</strong>
                    </div>
                    <div class="mt-3">
                        <a asp-action="Index" asp-route-phase="phase1" class="btn btn-primary btn-sm">
                            View Customer Invoices
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-warning text-dark">
                    <h6 class="card-title mb-0">
                        <i class="fas fa-industry"></i> OEM Invoices (Cost Tracking)
                    </h6>
                </div>
                <div class="card-body">
                    <p class="text-muted">Track costs from OEM purchases and payments made.</p>
                    <div class="d-flex justify-content-between">
                        <span>Total Invoices:</span>
                        <strong>@Model.TotalOemInvoices</strong>
                    </div>
                    <div class="d-flex justify-content-between">
                        <span>Pending Amount:</span>
                        <strong class="text-danger">@Model.PendingOemAmount.ToString("C")</strong>
                    </div>
                    <div class="d-flex justify-content-between">
                        <span>Overdue Invoices:</span>
                        <strong class="text-warning">@Model.OverdueOemInvoices</strong>
                    </div>
                    <div class="mt-3">
                        <a asp-action="Index" asp-route-phase="phase4" class="btn btn-warning btn-sm">
                            View OEM Invoices
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Activities -->
    <div class="row">
        <div class="col-md-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">
                        <i class="fas fa-clock"></i> Phase-Specific Invoice Management
                    </h5>
                </div>
                <div class="card-body">
                    <p class="text-muted">CBMS follows a 4-phase business workflow for comprehensive invoice tracking:
                    </p>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="border rounded p-3 mb-3">
                                <h6 class="text-primary"><i class="fas fa-user"></i> Phase 1 - Customer Engagement</h6>
                                <p class="small text-muted mb-2">Customer issues PO to Canarys → Canarys releases
                                    Invoice to Customer → Customer Payment</p>
                                <a asp-action="Index" asp-route-phase="phase1" class="btn btn-sm btn-outline-primary">
                                    Manage Customer Invoices
                                </a>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="border rounded p-3 mb-3">
                                <h6 class="text-warning"><i class="fas fa-industry"></i> Phase 4 - OEM Settlement</h6>
                                <p class="small text-muted mb-2">OEM releases Invoice to Canarys → Canarys pays OEM
                                    (applies to subscriptions and renewals)</p>
                                <a asp-action="Index" asp-route-phase="phase4" class="btn btn-sm btn-outline-warning">
                                    Manage OEM Invoices
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
