<!-- Workflow Section -->
<section id="workflow" class="workflow-section">
    <div class="container">
        <div class="section-header text-center mb-5">
            <h2 class="section-title">Streamlined B2B2B Workflow</h2>
            <p class="section-subtitle">
                Four-phase process designed for license intermediary operations
            </p>
        </div>

        <div class="workflow-steps">
            <div class="row">
                <div class="col-lg-3 col-md-6 mb-4">
                    <div class="workflow-step">
                        <div class="step-number">1</div>
                        <h5 class="step-title">Customer Engagement</h5>
                        <p class="step-description">
                            Customer issues PO → Canarys releases invoice → Customer payment
                        </p>
                    </div>
                </div>

                <div class="col-lg-3 col-md-6 mb-4">
                    <div class="workflow-step">
                        <div class="step-number">2</div>
                        <h5 class="step-title">OEM Procurement</h5>
                        <p class="step-description">
                            Canarys estimates quote → Send PO to OEM → Cost analysis
                        </p>
                    </div>
                </div>

                <div class="col-lg-3 col-md-6 mb-4">
                    <div class="workflow-step">
                        <div class="step-number">3</div>
                        <h5 class="step-title">License Delivery</h5>
                        <p class="step-description">
                            OEM issues license → Customer receives access → License activation
                        </p>
                    </div>
                </div>

                <div class="col-lg-3 col-md-6 mb-4">
                    <div class="workflow-step">
                        <div class="step-number">4</div>
                        <h5 class="step-title">OEM Settlement</h5>
                        <p class="step-description">
                            OEM invoices Canarys → Payment processing → Deal completion
                        </p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- CTA Section -->
<section id="cta" class="cta-section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8 text-center">
                <h2 class="cta-title">Ready to Transform Your License Business?</h2>
                <p class="cta-subtitle">
                    Join hundreds of license intermediaries who trust CBMS for their B2B2B operations.
                </p>
                <div class="cta-actions">
                    <a asp-controller="Auth" asp-action="Register" class="btn btn-primary btn-lg me-3">
                        <i class="fas fa-rocket me-2"></i>Start Free Trial
                    </a>
                    <a asp-controller="Auth" asp-action="Login" class="btn btn-outline-light btn-lg">
                        <i class="fas fa-sign-in-alt me-2"></i>Access Platform
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>
