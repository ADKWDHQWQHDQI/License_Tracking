@model License_Tracking.Models.Oem

@{
    ViewData["Title"] = $"OEM Profile - {Model.OemName}";
}

<div class="container-fluid">
    <!-- Header Section with Modern Design -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="text-primary mb-1">
                        <i class="fas fa-building"></i> @Model.OemName
                    </h2>
                    <p class="text-muted mb-0">
                        <span class="badge badge-@(Model.ServiceLevel switch
                        {
                            "Gold" => "warning",
                            "Silver" => "secondary", 
                            "Bronze" => "dark",
                            _ => "light"
                        })">@(Model.ServiceLevel ?? "Not Set")</span>
                        @if (Model.PerformanceRating.HasValue)
                        {
                            <span class="text-warning ms-2">
                                @for (int i = 1; i <= 5; i++)
                                {
                                    <i class="fas fa-star@(i <= Model.PerformanceRating ? "" : "-o")"></i>
                                }
                                <small>(@Model.PerformanceRating.Value.ToString("0.0"))</small>
                            </span>
                        }
                    </p>
                </div>
                <div class="d-flex gap-2">
                    <a asp-action="Edit" asp-route-id="@Model.OemId" class="btn btn-warning">
                        <i class="fas fa-edit"></i> Edit OEM
                    </a>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left"></i> Back to List
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Stats -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="stats-card">
                <div class="stats-card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <div class="stats-card-title">Total Products</div>
                            <div class="stats-card-value">@(Model.Products?.Count ?? 0)</div>
                        </div>
                        <div class="stats-card-icon text-success">
                            <i class="fas fa-box"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stats-card">
                <div class="stats-card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <div class="stats-card-title">Active Deals</div>
                            <div class="stats-card-value">@(Model.Deals?.Count ?? 0)</div>
                        </div>
                        <div class="stats-card-icon text-info">
                            <i class="fas fa-handshake"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stats-card">
                <div class="stats-card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <div class="stats-card-title">Performance</div>
                            <div class="stats-card-value">@(Model.PerformanceRating?.ToString("0.0") ?? "N/A")</div>
                        </div>
                        <div class="stats-card-icon text-warning">
                            <i class="fas fa-star"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stats-card">
                <div class="stats-card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <div class="stats-card-title">Service Level</div>
                            <div class="stats-card-value">@(Model.ServiceLevel ?? "Not Set")</div>
                        </div>
                        <div class="stats-card-icon text-primary">
                            <i class="fas fa-award"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Modern Tabbed Interface -->
    <div class="row">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-gradient-primary text-white border-bottom-0">
                    <ul class="nav nav-tabs card-header-tabs border-0" id="oemTabs" role="tablist">
                        <li class="nav-item" role="presentation">
                            <button class="nav-link active text-white border-0" id="overview-tab" data-bs-toggle="tab" data-bs-target="#overview" type="button" role="tab">
                                <i class="fas fa-info-circle"></i> Overview
                            </button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link text-white-50 border-0" id="products-tab" data-bs-toggle="tab" data-bs-target="#products" type="button" role="tab">
                                <i class="fas fa-box"></i> Products (@(Model.Products?.Count ?? 0))
                            </button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link text-white-50 border-0" id="performance-tab" data-bs-toggle="tab" data-bs-target="#performance" type="button" role="tab">
                                <i class="fas fa-chart-line"></i> Performance
                            </button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link text-white-50 border-0" id="deals-tab" data-bs-toggle="tab" data-bs-target="#deals" type="button" role="tab">
                                <i class="fas fa-handshake"></i> Active Deals (@(Model.Deals?.Count ?? 0))
                            </button>
                        </li>
                    </ul>
                </div>
                <div class="card-body">
                    <div class="tab-content" id="oemTabsContent">
                        
                        <!-- Overview Tab -->
                        <div class="tab-pane fade show active" id="overview" role="tabpanel">
                            <div class="row">
                                <!-- Basic Information -->
                                <div class="col-md-8">
                                    <h5 class="text-primary mb-3">
                                        <i class="fas fa-info-circle"></i> Basic Information
                                    </h5>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group mb-3">
                                                <label class="text-muted small">OEM Partner Name</label>
                                                <p class="h6">@Model.OemName</p>
                                            </div>
                                            <div class="form-group mb-3">
                                                <label class="text-muted small">Contact Email</label>
                                                <p>
                                                    @if (!string.IsNullOrEmpty(Model.ContactEmail))
                                                    {
                                                        <a href="mailto:@Model.ContactEmail">@Model.ContactEmail</a>
                                                    }
                                                    else
                                                    {
                                                        <span class="text-muted">Not provided</span>
                                                    }
                                                </p>
                                            </div>
                                            <div class="form-group mb-3">
                                                <label class="text-muted small">Contact Number</label>
                                                <p>
                                                    @if (!string.IsNullOrEmpty(Model.ContactNumber))
                                                    {
                                                        <a href="tel:@Model.ContactNumber">@Model.ContactNumber</a>
                                                    }
                                                    else
                                                    {
                                                        <span class="text-muted">Not provided</span>
                                                    }
                                                </p>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group mb-3">
                                                <label class="text-muted small">Payment Terms</label>
                                                <p>
                                                    <span class="badge badge-info">@(Model.PaymentTerms ?? "Not set")</span>
                                                </p>
                                            </div>
                                            <div class="form-group mb-3">
                                                <label class="text-muted small">Website</label>
                                                <p>
                                                    @if (!string.IsNullOrEmpty(Model.Website))
                                                    {
                                                        <a href="@Model.Website" target="_blank">@Model.Website</a>
                                                    }
                                                    else
                                                    {
                                                        <span class="text-muted">Not provided</span>
                                                    }
                                                </p>
                                            </div>
                                            <div class="form-group mb-3">
                                                <label class="text-muted small">Address</label>
                                                <p>@(Model.Address ?? "Not provided")</p>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <!-- Quick Stats -->
                                <div class="col-md-4">
                                    <h5 class="text-primary mb-3">
                                        <i class="fas fa-chart-bar"></i> Quick Stats
                                    </h5>
                                    <div class="card bg-light">
                                        <div class="card-body">
                                            <div class="row text-center">
                                                <div class="col-12 mb-3">
                                                    <div class="stat-item">
                                                        <h3 class="text-primary">@(Model.Products?.Count ?? 0)</h3>
                                                        <small class="text-muted">Products</small>
                                                    </div>
                                                </div>
                                                <div class="col-12 mb-3">
                                                    <div class="stat-item">
                                                        <h3 class="text-success">@(Model.Deals?.Count ?? 0)</h3>
                                                        <small class="text-muted">Active Deals</small>
                                                    </div>
                                                </div>
                                                <div class="col-12">
                                                    <div class="stat-item">
                                                        <h3 class="text-info">
                                                            @if (Model.PerformanceRating.HasValue)
                                                            {
                                                                @Model.PerformanceRating.Value.ToString("0.0")
                                                                <i class="fas fa-star text-warning"></i>
                                                            }
                                                            else
                                                            {
                                                                <span class="text-muted">-</span>
                                                            }
                                                        </h3>
                                                        <small class="text-muted">Performance Rating</small>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Products Tab -->
                        <div class="tab-pane fade" id="products" role="tabpanel">
                            <div class="d-flex justify-content-between align-items-center mb-4">
                                <h5 class="text-primary mb-0">
                                    <i class="fas fa-box"></i> OEM Products Portfolio
                                </h5>
                                <a asp-controller="Products" asp-action="Create" asp-route-oemId="@Model.OemId" class="btn btn-primary">
                                    <i class="fas fa-plus"></i> Add Product
                                </a>
                            </div>

                            @if (Model.Products?.Any() == true)
                            {
                                <div class="row">
                                    @foreach (var product in Model.Products.Where(p => p.IsActive))
                                    {
                                        <div class="col-md-6 col-lg-4 mb-4">
                                            <div class="card h-100 border-0 shadow-sm">
                                                <div class="card-body">
                                                    <h6 class="card-title text-primary">@product.ProductName</h6>
                                                    <p class="card-text">
                                                        <span class="badge badge-@(product.LicenseType switch 
                                                        {
                                                            "Subscription" => "success",
                                                            "Perpetual" => "primary",
                                                            "Trial" => "warning",
                                                            _ => "secondary"
                                                        })">
                                                            @(product.LicenseType ?? "Unknown")
                                                        </span>
                                                        <br>
                                                        <small class="text-muted">@(product.ProductCategory ?? "General")</small>
                                                    </p>
                                                    @if (product.UnitPrice.HasValue)
                                                    {
                                                        <p class="h6 text-success">@product.UnitPrice.Value.ToString("C")</p>
                                                    }
                                                    <div class="btn-group btn-group-sm w-100" role="group">
                                                        <a asp-controller="Products" asp-action="Details" asp-route-id="@product.ProductId" class="btn btn-outline-info">
                                                            <i class="fas fa-eye"></i> View
                                                        </a>
                                                        <a asp-controller="Products" asp-action="Edit" asp-route-id="@product.ProductId" class="btn btn-outline-warning">
                                                            <i class="fas fa-edit"></i> Edit
                                                        </a>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            }
                            else
                            {
                                <div class="text-center py-5">
                                    <i class="fas fa-box-open fa-3x text-muted mb-3"></i>
                                    <h5 class="text-muted">No Products</h5>
                                    <p class="text-muted">This OEM partner doesn't have any products assigned yet.</p>
                                    <a asp-controller="Products" asp-action="Create" asp-route-oemId="@Model.OemId" class="btn btn-primary">
                                        <i class="fas fa-plus"></i> Add First Product
                                    </a>
                                </div>
                            }
                        </div>

                        <!-- Performance Tab -->
                        <div class="tab-pane fade" id="performance" role="tabpanel">
                            <h5 class="text-primary mb-4">
                                <i class="fas fa-chart-line"></i> Performance Tracking & Service Level
                            </h5>

                            <div class="row">
                                <!-- Performance Rating -->
                                <div class="col-md-6">
                                    <div class="card">
                                        <div class="card-header">
                                            <h6 class="mb-0">Performance Rating</h6>
                                        </div>
                                        <div class="card-body text-center">
                                            @if (Model.PerformanceRating.HasValue)
                                            {
                                                <div class="performance-rating">
                                                    <h1 class="display-4 text-info">@Model.PerformanceRating.Value.ToString("0.0")</h1>
                                                    <div class="star-rating mb-2">
                                                        @for (int i = 1; i <= 5; i++)
                                                        {
                                                            <i class="fas fa-star @(i <= Model.PerformanceRating.Value ? "text-warning" : "text-muted")"></i>
                                                        }
                                                    </div>
                                                    <p class="text-muted">out of 5.0</p>
                                                </div>
                                            }
                                            else
                                            {
                                                <div class="text-muted py-4">
                                                    <i class="fas fa-chart-line fa-2x mb-3"></i>
                                                    <p>No performance rating assigned yet</p>
                                                    <button class="btn btn-primary" onclick="setPerformanceRating()">
                                                        <i class="fas fa-star"></i> Set Rating
                                                    </button>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                </div>

                                <!-- Service Level -->
                                <div class="col-md-6">
                                    <div class="card">
                                        <div class="card-header">
                                            <h6 class="mb-0">Service Level</h6>
                                        </div>
                                        <div class="card-body text-center">
                                            @if (!string.IsNullOrEmpty(Model.ServiceLevel))
                                            {
                                                <div class="service-level">
                                                    <span class="badge badge-@(Model.ServiceLevel switch 
                                                    {
                                                        "Gold" => "warning",
                                                        "Silver" => "secondary",
                                                        "Bronze" => "dark",
                                                        _ => "light"
                                                    }) p-3 h4">
                                                        @Model.ServiceLevel
                                                    </span>
                                                    <p class="text-muted mt-3">
                                                        @(Model.ServiceLevel switch 
                                                        {
                                                            "Gold" => "Premium service level with priority support",
                                                            "Silver" => "Standard service level with regular support", 
                                                            "Bronze" => "Basic service level",
                                                            _ => "Service level details"
                                                        })
                                                    </p>
                                                </div>
                                            }
                                            else
                                            {
                                                <div class="text-muted py-4">
                                                    <i class="fas fa-award fa-2x mb-3"></i>
                                                    <p>No service level assigned</p>
                                                    <button class="btn btn-primary" onclick="setServiceLevel()">
                                                        <i class="fas fa-award"></i> Set Service Level
                                                    </button>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Performance Metrics -->
                            <div class="row mt-4">
                                <div class="col-12">
                                    <div class="card">
                                        <div class="card-header">
                                            <h6 class="mb-0">Performance Metrics</h6>
                                        </div>
                                        <div class="card-body">
                                            <div class="row text-center">
                                                <div class="col-md-3">
                                                    <div class="metric-item">
                                                        <h4 class="text-success">@(Model.Deals?.Count(d => d.DealStage == "Won") ?? 0)</h4>
                                                        <small class="text-muted">Successful Deals</small>
                                                    </div>
                                                </div>
                                                <div class="col-md-3">
                                                    <div class="metric-item">
                                                        <h4 class="text-primary">@(Model.Deals?.Count(d => d.DealStage == "Active") ?? 0)</h4>
                                                        <small class="text-muted">Active Deals</small>
                                                    </div>
                                                </div>
                                                <div class="col-md-3">
                                                    <div class="metric-item">
                                                        <h4 class="text-info">
                                                            @if (Model.Deals?.Any() == true)
                                                            {
                                                                @(Model.Deals.Average(d => d.CustomerInvoiceAmount ?? 0).ToString("C"))
                                                            }
                                                            else
                                                            {
                                                                <span>$0</span>
                                                            }
                                                        </h4>
                                                        <small class="text-muted">Avg Deal Value</small>
                                                    </div>
                                                </div>
                                                <div class="col-md-3">
                                                    <div class="metric-item">
                                                        <h4 class="text-warning">@(Model.Products?.Count ?? 0)</h4>
                                                        <small class="text-muted">Product Portfolio</small>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Active Deals Tab -->
                        <div class="tab-pane fade" id="deals" role="tabpanel">
                            <div class="d-flex justify-content-between align-items-center mb-4">
                                <h5 class="text-primary mb-0">
                                    <i class="fas fa-handshake"></i> Active Deals & Partnerships
                                </h5>
                                <a asp-controller="Deals" asp-action="Create" asp-route-oemId="@Model.OemId" class="btn btn-primary">
                                    <i class="fas fa-plus"></i> Create Deal
                                </a>
                            </div>

                            @if (Model.Deals?.Any() == true)
                            {
                                <div class="table-responsive">
                                    <table class="table table-hover">
                                        <thead class="thead-light">
                                            <tr>
                                                <th>Deal Name</th>
                                                <th>Customer</th>
                                                <th>Stage</th>
                                                <th>Value</th>
                                                <th>Expected Close</th>
                                                <th>Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var deal in Model.Deals.OrderByDescending(d => d.CreatedDate))
                                            {
                                                <tr>
                                                    <td>
                                                        <strong>@deal.DealName</strong>
                                                        <br><small class="text-muted">@deal.Product?.ProductName</small>
                                                    </td>
                                                    <td>@(deal.Company?.CompanyName ?? "Unknown")</td>
                                                    <td>
                                                        <span class="badge badge-@(deal.DealStage switch 
                                                        {
                                                            "Won" => "success",
                                                            "Active" => "primary",
                                                            "Lost" => "danger",
                                                            _ => "secondary"
                                                        })">
                                                            @deal.DealStage
                                                        </span>
                                                    </td>
                                                    <td>@(deal.CustomerInvoiceAmount?.ToString("C") ?? "TBD")</td>
                                                    <td>@(deal.ExpectedCloseDate?.ToString("MMM dd, yyyy") ?? "TBD")</td>
                                                    <td>
                                                        <a asp-controller="Deals" asp-action="Details" asp-route-id="@deal.DealId" class="btn btn-sm btn-outline-info">
                                                            <i class="fas fa-eye"></i>
                                                        </a>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            }
                            else
                            {
                                <div class="text-center py-5">
                                    <i class="fas fa-handshake fa-3x text-muted mb-3"></i>
                                    <h5 class="text-muted">No Active Deals</h5>
                                    <p class="text-muted">No deals are currently active with this OEM partner.</p>
                                    <a asp-controller="Deals" asp-action="Create" asp-route-oemId="@Model.OemId" class="btn btn-primary">
                                        <i class="fas fa-plus"></i> Create First Deal
                                    </a>
                                </div>
                            }
                        </div>

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function setPerformanceRating() {
            // TODO: Implement performance rating modal
            alert('Performance rating management will be implemented with AJAX modal.');
        }
        
        function setServiceLevel() {
            // TODO: Implement service level modal
            alert('Service level management will be implemented with AJAX modal.');
        }
        
        // Initialize tooltips
        $(function () {
            $('[data-toggle="tooltip"]').tooltip();
        });
    </script>
}
