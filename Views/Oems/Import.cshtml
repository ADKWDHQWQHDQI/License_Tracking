@{
    ViewData["Title"] = "Import OEM Partners - Reference Data Integration";
}

<div class="container-fluid">
    <!-- Header Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-gradient-primary text-white border-bottom-0">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h2 class="text-white mb-1">
                                <i class="fas fa-upload"></i> Import OEM Partners
                            </h2>
                            <p class="text-white-50 mb-0">
                                Bulk import OEM reference data from CSV or JSON files
                            </p>
                        </div>
                        <div>
                            <a asp-action="Index" class="btn btn-outline-light">
                                <i class="fas fa-arrow-left me-1"></i>Back to OEMs
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Import Instructions -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="mb-0">
                        <i class="fas fa-info-circle text-info"></i> Import Instructions
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h6 class="text-primary">Step 1: Download Template</h6>
                            <p class="text-muted mb-3">Download the import template to ensure proper formatting:</p>
                            <div class="d-flex gap-2 mb-3">
                                <a asp-action="Template" asp-route-format="csv" class="btn btn-outline-success btn-sm">
                                    <i class="fas fa-file-csv"></i> CSV Template
                                </a>
                                <a asp-action="Template" asp-route-format="json" class="btn btn-outline-info btn-sm">
                                    <i class="fas fa-file-code"></i> JSON Template
                                </a>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <h6 class="text-primary">Step 2: Prepare Your Data</h6>
                            <ul class="text-muted small">
                                <li><strong>Required:</strong> OEM Name</li>
                                <li><strong>Optional:</strong> Contact Email, Phone, Payment Terms</li>
                                <li><strong>Service Level:</strong> Gold, Silver, or Bronze</li>
                                <li><strong>Performance Rating:</strong> 0.0 to 5.0</li>
                            </ul>
                        </div>
                    </div>

                    <div class="alert alert-warning border-0 mt-3">
                        <div class="d-flex align-items-center">
                            <i class="fas fa-exclamation-triangle me-2"></i>
                            <div>
                                <strong>Important:</strong> Duplicate OEM names will be skipped. Existing OEMs will not
                                be updated.
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Import Form -->
    <div class="row mb-4">
        <div class="col-md-8 mx-auto">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-gradient-success text-white border-bottom-0">
                    <h5 class="mb-0 text-white">
                        <i class="fas fa-cloud-upload-alt"></i> Upload Import File
                    </h5>
                </div>
                <div class="card-body">
                    <!-- Success/Error Messages -->
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success border-0 bg-light-success">
                            <div class="d-flex align-items-center">
                                <i class="fas fa-check-circle text-success me-2"></i>
                                <div>@TempData["SuccessMessage"]</div>
                            </div>
                        </div>
                    }

                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger border-0">
                            <div class="d-flex align-items-center">
                                <i class="fas fa-exclamation-circle text-danger me-2"></i>
                                <div>@TempData["ErrorMessage"]</div>
                            </div>
                        </div>
                    }

                    <form asp-action="Import" method="post" enctype="multipart/form-data" id="importForm">
                        @Html.AntiForgeryToken()

                        <div class="row">
                            <div class="col-12">
                                <div class="mb-4">
                                    <label for="file" class="form-label fw-medium">
                                        Select Import File <span class="text-danger">*</span>
                                    </label>
                                    <div class="input-group">
                                        <input type="file" class="form-control" id="file" name="file"
                                            accept=".csv,.json" required>
                                        <label class="input-group-text" for="file">
                                            <i class="fas fa-file-upload"></i>
                                        </label>
                                    </div>
                                    <div class="form-text">
                                        Supported formats: CSV (.csv) and JSON (.json). Maximum file size: 10MB
                                    </div>
                                </div>

                                <!-- File Preview Area -->
                                <div id="filePreview" class="mb-4" style="display: none;">
                                    <div class="card bg-light border-0">
                                        <div class="card-body">
                                            <h6 class="text-primary mb-2">
                                                <i class="fas fa-file-alt"></i> Selected File
                                            </h6>
                                            <div id="fileInfo" class="text-muted small"></div>
                                        </div>
                                    </div>
                                </div>

                                <div class="d-grid gap-2">
                                    <button type="submit" class="btn btn-success btn-lg" id="submitBtn">
                                        <i class="fas fa-upload me-2"></i> Import OEM Partners
                                    </button>
                                    <a asp-action="Index" class="btn btn-outline-secondary">
                                        <i class="fas fa-times me-1"></i> Cancel
                                    </a>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Import Validation Rules -->
    <div class="row">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="mb-0">
                        <i class="fas fa-shield-alt text-warning"></i> Validation Rules
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <h6 class="text-primary">Data Validation</h6>
                            <ul class="text-muted small">
                                <li>OEM Name is required and must be unique</li>
                                <li>Email addresses must be valid format</li>
                                <li>Service Level: Gold, Silver, Bronze only</li>
                                <li>Performance Rating: 0.0 to 5.0 range</li>
                                <li>Phone numbers are validated for format</li>
                            </ul>
                        </div>
                        <div class="col-md-6">
                            <h6 class="text-primary">Import Behavior</h6>
                            <ul class="text-muted small">
                                <li>Duplicate names within file will cause import failure</li>
                                <li>Existing OEMs (by name) will be skipped</li>
                                <li>Invalid rows will prevent entire import</li>
                                <li>All validation must pass before import proceeds</li>
                                <li>Import is transactional (all or nothing)</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // File selection handling
        document.getElementById('file').addEventListener('change', function (e) {
            const file = e.target.files[0];
            const filePreview = document.getElementById('filePreview');
            const fileInfo = document.getElementById('fileInfo');

            if (file) {
                filePreview.style.display = 'block';

                const sizeInMB = (file.size / (1024 * 1024)).toFixed(2);
                const fileType = file.type || 'Unknown';
                const lastModified = new Date(file.lastModified).toLocaleDateString();

                fileInfo.innerHTML = `
                            <div class="row">
                                <div class="col-sm-3"><strong>Name:</strong></div>
                                <div class="col-sm-9">${file.name}</div>
                            </div>
                            <div class="row">
                                <div class="col-sm-3"><strong>Size:</strong></div>
                                <div class="col-sm-9">${sizeInMB} MB</div>
                            </div>
                            <div class="row">
                                <div class="col-sm-3"><strong>Type:</strong></div>
                                <div class="col-sm-9">${fileType}</div>
                            </div>
                            <div class="row">
                                <div class="col-sm-3"><strong>Modified:</strong></div>
                                <div class="col-sm-9">${lastModified}</div>
                            </div>
                        `;

                // Validate file size (10MB limit)
                if (file.size > 10 * 1024 * 1024) {
                    fileInfo.innerHTML += '<div class="text-danger mt-2"><i class="fas fa-exclamation-triangle"></i> File size exceeds 10MB limit</div>';
                    document.getElementById('submitBtn').disabled = true;
                } else {
                    document.getElementById('submitBtn').disabled = false;
                }

                // Validate file type
                const validExtensions = ['.csv', '.json'];
                const fileExtension = file.name.toLowerCase().substring(file.name.lastIndexOf('.'));

                if (!validExtensions.includes(fileExtension)) {
                    fileInfo.innerHTML += '<div class="text-danger mt-2"><i class="fas fa-exclamation-triangle"></i> Invalid file type. Please use CSV or JSON files.</div>';
                    document.getElementById('submitBtn').disabled = true;
                }

            } else {
                filePreview.style.display = 'none';
                document.getElementById('submitBtn').disabled = false;
            }
        });

        // Form submission handling
        document.getElementById('importForm').addEventListener('submit', function (e) {
            const submitBtn = document.getElementById('submitBtn');
            const originalText = submitBtn.innerHTML;

            submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin me-2"></i> Importing...';
            submitBtn.disabled = true;

            // Re-enable button after 30 seconds in case of issues
            setTimeout(() => {
                submitBtn.innerHTML = originalText;
                submitBtn.disabled = false;
            }, 30000);
        });

        // Drag and drop functionality
        const fileInput = document.getElementById('file');
        const formCard = document.querySelector('.card');

        ['dragenter', 'dragover', 'dragleave', 'drop'].forEach(eventName => {
            formCard.addEventListener(eventName, preventDefaults, false);
        });

        function preventDefaults(e) {
            e.preventDefault();
            e.stopPropagation();
        }

        ['dragenter', 'dragover'].forEach(eventName => {
            formCard.addEventListener(eventName, highlight, false);
        });

        ['dragleave', 'drop'].forEach(eventName => {
            formCard.addEventListener(eventName, unhighlight, false);
        });

        function highlight(e) {
            formCard.classList.add('border-primary');
        }

        function unhighlight(e) {
            formCard.classList.remove('border-primary');
        }

        formCard.addEventListener('drop', handleDrop, false);

        function handleDrop(e) {
            const dt = e.dataTransfer;
            const files = dt.files;

            if (files.length > 0) {
                fileInput.files = files;
                fileInput.dispatchEvent(new Event('change', { bubbles: true }));
            }
        }
    </script>

    <!-- Additional CSS for enhanced UI -->
    <style>
        .bg-light-success {
            background-color: rgba(25, 135, 84, 0.1);
            border-color: rgba(25, 135, 84, 0.2);
        }

        .card-header.bg-gradient-primary {
            background: linear-gradient(135deg, #007bff 0%, #0056b3 100%);
        }

        .card-header.bg-gradient-success {
            background: linear-gradient(135deg, #28a745 0%, #1e7e34 100%);
        }

        .border-primary {
            border-color: #007bff !important;
            border-width: 2px !important;
        }

        .form-control:focus {
            border-color: #80bdff;
            box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
        }

        .btn-lg {
            padding: 0.75rem 1.5rem;
            font-size: 1.1rem;
        }

        @@media (max-width: 768px) {
            .d-flex.gap-2 {
                flex-direction: column;
                gap: 0.5rem !important;
            }
        }
    </style>
}
