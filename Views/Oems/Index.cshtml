@model IEnumerable<License_Tracking.Models.Oem>

@{
    ViewData["Title"] = "OEM Reference Data Management";
}

@section Styles {
    <style>
        /* Bigin.com-inspired OEM Action Styles */
        .bigin-quick-actions-container {
            background: linear-gradient(135deg, #f8f9ff 0%, #fff 100%);
            border-radius: 16px;
            padding: 1.5rem;
            border: 1px solid #e8ecff;
            box-shadow: 0 2px 12px rgba(0, 0, 0, 0.04);
        }

        .bigin-action-card {
            background: white;
            border-radius: 12px;
            padding: 1.25rem;
            border: 1px solid #f1f3f7;
            transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
            text-decoration: none;
            color: inherit;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            min-height: 100px;
            position: relative;
            overflow: hidden;
        }

        .bigin-action-card:hover {
            transform: translateY(-4px);
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.12);
            text-decoration: none;
            color: inherit;
        }

        .bigin-action-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 3px;
            background: linear-gradient(90deg, var(--action-color, #667eea) 0%, var(--action-color-light, #764ba2) 100%);
            opacity: 0;
            transition: opacity 0.3s ease;
        }

        .bigin-action-card:hover::before {
            opacity: 1;
        }

        .bigin-action-card.primary {
            --action-color: #667eea;
            --action-color-light: #764ba2;
        }

        .bigin-action-card.primary:hover {
            border-color: #e0e6ff;
            background: linear-gradient(135deg, #f8f9ff 0%, #fff 100%);
        }

        .bigin-action-card.success {
            --action-color: #28a745;
            --action-color-light: #20c997;
        }

        .bigin-action-card.success:hover {
            border-color: #d4edda;
            background: linear-gradient(135deg, #f8fff9 0%, #fff 100%);
        }

        .bigin-action-card.info {
            --action-color: #17a2b8;
            --action-color-light: #20c997;
        }

        .bigin-action-card.info:hover {
            border-color: #d1ecf1;
            background: linear-gradient(135deg, #f7fcfd 0%, #fff 100%);
        }

        .bigin-action-card.warning {
            --action-color: #ffc107;
            --action-color-light: #ff9800;
        }

        .bigin-action-card.warning:hover {
            border-color: #fff3cd;
            background: linear-gradient(135deg, #fffcf5 0%, #fff 100%);
        }

        .bigin-action-card.purple {
            --action-color: #6f42c1;
            --action-color-light: #9c27b0;
        }

        .bigin-action-card.purple:hover {
            border-color: #e2d9f3;
            background: linear-gradient(135deg, #faf9fc 0%, #fff 100%);
        }

        .bigin-action-card.secondary {
            --action-color: #6c757d;
            --action-color-light: #495057;
        }

        .bigin-action-card.secondary:hover {
            border-color: #e9ecef;
            background: linear-gradient(135deg, #f8f9fa 0%, #fff 100%);
        }

        .bigin-action-icon {
            width: 48px;
            height: 48px;
            border-radius: 12px;
            display: flex;
            align-items: center;
            justify-content: center;
            margin-bottom: 0.75rem;
            font-size: 1.25rem;
            background: linear-gradient(135deg, var(--action-color, #667eea) 0%, var(--action-color-light, #764ba2) 100%);
            color: white;
            transition: all 0.3s ease;
        }

        .bigin-action-card:hover .bigin-action-icon {
            transform: scale(1.1);
            box-shadow: 0 4px 16px rgba(0, 0, 0, 0.15);
        }

        .bigin-action-title {
            font-weight: 600;
            font-size: 0.875rem;
            margin-bottom: 0.25rem;
            text-align: center;
            color: #2d3748;
        }

        .bigin-action-description {
            font-size: 0.75rem;
            color: #718096;
            text-align: center;
            line-height: 1.3;
        }

        .bigin-dropdown-card {
            position: relative;
        }

        .bigin-dropdown-card .dropdown-toggle::after {
            display: none;
        }

        .bigin-dropdown-icon {
            position: absolute;
            top: 8px;
            right: 8px;
            width: 20px;
            height: 20px;
            border-radius: 50%;
            background: rgba(255, 255, 255, 0.9);
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 0.7rem;
            color: var(--action-color, #667eea);
            transition: all 0.3s ease;
        }

        .bigin-action-card:hover .bigin-dropdown-icon {
            background: var(--action-color, #667eea);
            color: white;
            transform: rotate(180deg);
        }

        .dropdown-menu {
            border: none;
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.12);
            border-radius: 12px;
            padding: 0.5rem;
            margin-top: 0.5rem;
        }

        .dropdown-item {
            border-radius: 8px;
            padding: 0.5rem 1rem;
            transition: all 0.2s ease;
            margin-bottom: 0.25rem;
        }

        .dropdown-item:hover {
            background: linear-gradient(135deg, #f8f9ff 0%, #fff 100%);
            transform: translateX(4px);
        }

        .dropdown-item:last-child {
            margin-bottom: 0;
        }

        /* Soft background colors */
        .bg-primary-soft {
            background-color: rgba(102, 126, 234, 0.1);
        }

        /* Animation for action cards */
        .bigin-action-card {
            animation: fadeInUp 0.6s ease-out;
        }

        @@keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(20px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        /* Stagger animation for multiple cards */
        .bigin-action-card:nth-child(1) { animation-delay: 0.1s; }
        .bigin-action-card:nth-child(2) { animation-delay: 0.2s; }
        .bigin-action-card:nth-child(3) { animation-delay: 0.3s; }
        .bigin-action-card:nth-child(4) { animation-delay: 0.4s; }
        .bigin-action-card:nth-child(5) { animation-delay: 0.5s; }
        .bigin-action-card:nth-child(6) { animation-delay: 0.6s; }
    </style>
}

<div class="container-fluid">
    <!-- Header Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="text-primary mb-1">
                        <i class="fas fa-building"></i> OEM Reference Data Management
                    </h2>
                </div>
                <div class="d-flex gap-2">
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="fas fa-plus"></i> Add New OEM
                    </a>
                    <button class="btn btn-outline-info" data-bs-toggle="modal" data-bs-target="#importModal">
                        <i class="fas fa-upload"></i> Import OEMs
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Enhanced Bigin-Style Quick Actions -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="bigin-quick-actions-container">
                <div class="d-flex justify-content-between align-items-center mb-3">
                    <div>
                        <h5 class="mb-1 text-dark fw-bold">
                            <i class="fas fa-bolt text-warning me-2"></i>
                            Quick OEM Actions
                        </h5>
                        <p class="text-muted mb-0 small">Streamlined OEM management tools and shortcuts</p>
                    </div>
                    <div class="badge bg-primary-soft text-primary rounded-pill px-3 py-2">
                        <i class="fas fa-rocket me-1"></i>
                        Power Tools
                    </div>
                </div>
                
                <div class="row g-3">
                    <div class="col-lg-2 col-md-3 col-sm-6">
                        <a asp-action="Create" class="bigin-action-card primary">
                            <div class="bigin-action-icon">
                                <i class="fas fa-building"></i>
                            </div>
                            <div class="bigin-action-title">Add New OEM</div>
                            <div class="bigin-action-description">Register new OEM partner</div>
                        </a>
                    </div>
                    
                    <div class="col-lg-2 col-md-3 col-sm-6">
                        <a asp-controller="Products" asp-action="Create" class="bigin-action-card success">
                            <div class="bigin-action-icon">
                                <i class="fas fa-box"></i>
                            </div>
                            <div class="bigin-action-title">Add Product</div>
                            <div class="bigin-action-description">Create new product entry</div>
                        </a>
                    </div>
                    
                    <div class="col-lg-2 col-md-3 col-sm-6">
                        <a asp-action="Import" class="bigin-action-card info">
                            <div class="bigin-action-icon">
                                <i class="fas fa-upload"></i>
                            </div>
                            <div class="bigin-action-title">Import OEMs</div>
                            <div class="bigin-action-description">Bulk import from file</div>
                        </a>
                    </div>
                    
                    <div class="col-lg-2 col-md-3 col-sm-6">
                        <div class="bigin-dropdown-card">
                            <button class="bigin-action-card warning dropdown-toggle w-100 border-0 bg-transparent" 
                                    type="button" id="exportDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                                <div class="bigin-action-icon">
                                    <i class="fas fa-download"></i>
                                </div>
                                <div class="bigin-action-title">Export Data</div>
                                <div class="bigin-action-description">Download OEM data</div>
                                <div class="bigin-dropdown-icon">
                                    <i class="fas fa-chevron-down"></i>
                                </div>
                            </button>
                            <ul class="dropdown-menu shadow-lg" aria-labelledby="exportDropdown">
                                <li>
                                    <a class="dropdown-item" asp-action="Export" asp-route-format="csv">
                                        <i class="fas fa-file-csv text-success me-2"></i>Export CSV
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-action="Export" asp-route-format="excel">
                                        <i class="fas fa-file-excel text-success me-2"></i>Export Excel
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" asp-action="Export" asp-route-format="json">
                                        <i class="fas fa-file-code text-info me-2"></i>Export JSON
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                    
                    <div class="col-lg-2 col-md-3 col-sm-6">
                        <a asp-controller="Companies" asp-action="OemRelationships" class="bigin-action-card purple">
                            <div class="bigin-action-icon">
                                <i class="fas fa-handshake"></i>
                            </div>
                            <div class="bigin-action-title">Relationships</div>
                            <div class="bigin-action-description">Manage partnerships</div>
                        </a>
                    </div>
                    
                    <div class="col-lg-2 col-md-3 col-sm-6">
                        <button class="bigin-action-card secondary border-0 bg-transparent w-100" onclick="toggleView()">
                            <div class="bigin-action-icon">
                                <i class="fas fa-eye"></i>
                            </div>
                            <div class="bigin-action-title">Toggle View</div>
                            <div class="bigin-action-description">Switch display mode</div>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Modern Statistics Cards -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="stats-card">
                <div class="stats-card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <div class="stats-card-title">Total OEMs</div>
                            <div class="stats-card-value">@(Model?.Count() ?? 0)</div>
                        </div>
                        <div class="stats-card-icon text-primary">
                            <i class="fas fa-building"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stats-card">
                <div class="stats-card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <div class="stats-card-title">Gold Partners</div>
                            <div class="stats-card-value">@(Model?.Count(o => o.ServiceLevel == "Gold") ?? 0)</div>
                        </div>
                        <div class="stats-card-icon text-warning">
                            <i class="fas fa-star"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stats-card">
                <div class="stats-card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <div class="stats-card-title">Total Products</div>
                            <div class="stats-card-value">@(Model?.Sum(o => o.Products?.Count ?? 0) ?? 0)</div>
                        </div>
                        <div class="stats-card-icon text-success">
                            <i class="fas fa-box"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stats-card">
                <div class="stats-card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <div class="stats-card-title">Active Deals</div>
                            <div class="stats-card-value">@(Model?.Sum(o => o.Deals?.Count ?? 0) ?? 0)</div>
                        </div>
                        <div class="stats-card-icon text-info">
                            <i class="fas fa-handshake"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Advanced Search and Filter Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-header bg-gradient-primary text-white border-bottom-0">
                    <h5 class="mb-0 text-white">
                        <i class="fas fa-filter"></i> Advanced OEM Search & Filtering
                    </h5>
                    <small class="text-white-50">Filter OEM partners by service level, performance, and search criteria</small>
                </div>
                <div class="card-body">
                    <form asp-action="Index" method="get">
                        <div class="row">
                            <div class="col-md-4">
                                <div class="form-group">
                                    <label class="form-label">Search OEM Partners</label>
                                    <div class="input-group">
                                        <input type="text" name="searchString" value="@ViewData["CurrentFilter"]"
                                            class="form-control" placeholder="Search by name, email..." />
                                        <button class="btn btn-outline-secondary" type="submit">
                                            <i class="fas fa-search"></i>
                                        </button>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label class="form-label">Service Level</label>
                                    <select name="serviceLevel" class="form-select">
                                        <option value="">All Service Levels</option>
                                        <option value="Gold">Gold Partners</option>
                                        <option value="Silver">Silver Partners</option>
                                        <option value="Bronze">Bronze Partners</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-3">
                                <div class="form-group">
                                    <label class="form-label">Performance Rating</label>
                                    <select name="performanceFilter" class="form-select">
                                        <option value="">All Ratings</option>
                                        <option value="high">4.0+ Stars</option>
                                        <option value="medium">3.0-3.9 Stars</option>
                                        <option value="low">Below 3.0 Stars</option>
                                    </select>
                                </div>
                            </div>
                            <div class="col-md-2">
                                <div class="form-group">
                                    <label class="form-label">&nbsp;</label>
                                    <div class="d-grid">
                                        <button type="submit" class="btn btn-primary">
                                            <i class="fas fa-filter"></i> Filter
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <!-- Modern View Controls -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <div class="card-body py-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <div class="d-flex align-items-center">
                            <h6 class="mb-0 me-3">
                                <i class="fas fa-eye text-primary"></i> View Options
                            </h6>
                            <div class="btn-group" role="group">
                                <button type="button" class="btn btn-outline-primary active" id="cardViewBtn" onclick="showCardView()">
                                    <i class="fas fa-th-large"></i> Cards
                                </button>
                                <button type="button" class="btn btn-outline-primary" id="tableViewBtn" onclick="showTableView()">
                                    <i class="fas fa-table"></i> Table
                                </button>
                            </div>
                        </div>
                        <div class="d-flex gap-2">
                            <div class="dropdown">
                                <button class="btn btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                                    <i class="fas fa-download"></i> Export
                                </button>
                                <ul class="dropdown-menu">
                                    <li><a class="dropdown-item" href="#" onclick="exportToExcel()">
                                        <i class="fas fa-file-excel text-success"></i> Excel Format
                                    </a></li>
                                    <li><a class="dropdown-item" href="#" onclick="exportToPDF()">
                                        <i class="fas fa-file-pdf text-danger"></i> PDF Report
                                    </a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- OEM Partners Display -->
    <div class="row">
        <div class="col-12">
            <div id="cardView">
                <!-- Card View -->
                @if (Model?.Any() == true)
                {
                    <div class="row">
                        @foreach (var oem in Model)
                        {
                            <div class="col-md-6 col-lg-4 mb-4">
                                <div class="card h-100 border-0 shadow-sm hover-shadow">
                                    <div class="card-header d-flex justify-content-between align-items-center">
                                        <div>
                                            <h6 class="mb-0 text-primary">@oem.OemName</h6>
                                            @if (!string.IsNullOrEmpty(oem.ServiceLevel))
                                            {
                                                <span class="badge badge-@(oem.ServiceLevel switch 
                                                {
                                                    "Gold" => "warning",
                                                    "Silver" => "secondary",
                                                    "Bronze" => "dark",
                                                    _ => "light"
                                                }) mt-1">@oem.ServiceLevel</span>
                                            }
                                        </div>
                                        @if (oem.PerformanceRating.HasValue)
                                        {
                                            <div class="text-warning">
                                                <small>@oem.PerformanceRating.Value.ToString("0.0")</small>
                                                <i class="fas fa-star"></i>
                                            </div>
                                        }
                                    </div>
                                    <div class="card-body">
                                        <div class="row text-center mb-3">
                                            <div class="col-4">
                                                <div class="stat-item">
                                                    <h6 class="text-primary">@(oem.Products?.Count ?? 0)</h6>
                                                    <small class="text-muted">Products</small>
                                                </div>
                                            </div>
                                            <div class="col-4">
                                                <div class="stat-item">
                                                    <h6 class="text-success">@(oem.Deals?.Count ?? 0)</h6>
                                                    <small class="text-muted">Deals</small>
                                                </div>
                                            </div>
                                            <div class="col-4">
                                                <div class="stat-item">
                                                    <h6 class="text-info">@(oem.CustomerOemProducts?.Count ?? 0)</h6>
                                                    <small class="text-muted">Customers</small>
                                                </div>
                                            </div>
                                        </div>
                                        
                                        <div class="contact-info">
                                            @if (!string.IsNullOrEmpty(oem.ContactEmail))
                                            {
                                                <p class="mb-1">
                                                    <i class="fas fa-envelope text-muted"></i>
                                                    <small><a href="mailto:@oem.ContactEmail">@oem.ContactEmail</a></small>
                                                </p>
                                            }
                                            @if (!string.IsNullOrEmpty(oem.ContactNumber))
                                            {
                                                <p class="mb-1">
                                                    <i class="fas fa-phone text-muted"></i>
                                                    <small><a href="tel:@oem.ContactNumber">@oem.ContactNumber</a></small>
                                                </p>
                                            }
                                            @if (!string.IsNullOrEmpty(oem.PaymentTerms))
                                            {
                                                <p class="mb-1">
                                                    <i class="fas fa-credit-card text-muted"></i>
                                                    <small>@oem.PaymentTerms</small>
                                                </p>
                                            }
                                        </div>
                                    </div>
                                    <div class="card-footer">
                                        <div class="btn-group w-100" role="group">
                                            <a asp-action="Details" asp-route-id="@oem.OemId" class="btn btn-sm btn-outline-info">
                                                <i class="fas fa-eye"></i> View
                                            </a>
                                            <a asp-action="Edit" asp-route-id="@oem.OemId" class="btn btn-sm btn-outline-warning">
                                                <i class="fas fa-edit"></i> Edit
                                            </a>
                                            <a asp-controller="Products" asp-action="Index" asp-route-oemId="@oem.OemId" class="btn btn-sm btn-outline-primary">
                                                <i class="fas fa-box"></i> Products
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                }
                else
                {
                    <div class="text-center py-5">
                        <i class="fas fa-building fa-3x text-muted mb-3"></i>
                        <h5 class="text-muted">No OEM Partners Found</h5>
                        <p class="text-muted">Start building your OEM partner network by adding your first OEM partner.</p>
                        <a asp-action="Create" class="btn btn-primary">
                            <i class="fas fa-plus"></i> Add First OEM Partner
                        </a>
                    </div>
                }
            </div>

            <div id="tableView" style="display: none;">
                <!-- Table View -->
                <div class="card">
                    <div class="card-body p-0">
                        <div class="table-responsive">

                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>OEM Partner</th>
                                        <th>Service Level</th>
                                        <th>Performance</th>
                                        <th>Contact Info</th>
                                        <th>Portfolio</th>
                                        <th>Payment Terms</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (Model?.Any() == true)
                                    {
                                        @foreach (var oem in Model)
                                        {
                                            <tr>
                                                <td>
                                                    <div>
                                                        <strong>@oem.OemName</strong>
                                                        <br><small class="text-muted">Created @oem.CreatedDate.ToString("MMM dd, yyyy")</small>
                                                    </div>
                                                </td>
                                                <td>
                                                    @if (!string.IsNullOrEmpty(oem.ServiceLevel))
                                                    {
                                                        <span class="badge badge-@(oem.ServiceLevel switch 
                                                        {
                                                            "Gold" => "warning",
                                                            "Silver" => "secondary",
                                                            "Bronze" => "dark",
                                                            _ => "light"
                                                        })">@oem.ServiceLevel</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="text-muted">Not set</span>
                                                    }
                                                </td>
                                                <td>
                                                    @if (oem.PerformanceRating.HasValue)
                                                    {
                                                        <div class="d-flex align-items-center">
                                                            <span class="me-2">@oem.PerformanceRating.Value.ToString("0.0")</span>
                                                            <div>
                                                                @for (int i = 1; i <= 5; i++)
                                                                {
                                                                    <i class="fas fa-star @(i <= oem.PerformanceRating.Value ? "text-warning" : "text-muted") fa-xs"></i>
                                                                }
                                                            </div>
                                                        </div>
                                                    }
                                                    else
                                                    {
                                                        <span class="text-muted">Not rated</span>
                                                    }
                                                </td>
                                                <td>
                                                    @if (!string.IsNullOrEmpty(oem.ContactEmail))
                                                    {
                                                        <div><a href="mailto:@oem.ContactEmail" class="text-decoration-none">@oem.ContactEmail</a></div>
                                                    }
                                                    @if (!string.IsNullOrEmpty(oem.ContactNumber))
                                                    {
                                                        <div><a href="tel:@oem.ContactNumber" class="text-decoration-none">@oem.ContactNumber</a></div>
                                                    }
                                                    @if (string.IsNullOrEmpty(oem.ContactEmail) && string.IsNullOrEmpty(oem.ContactNumber))
                                                    {
                                                        <span class="text-muted">Not provided</span>
                                                    }
                                                </td>
                                                <td>
                                                    <div class="d-flex gap-3">
                                                        <div class="text-center">
                                                            <div class="fw-bold text-primary">@(oem.Products?.Count ?? 0)</div>
                                                            <small class="text-muted">Products</small>
                                                        </div>
                                                        <div class="text-center">
                                                            <div class="fw-bold text-success">@(oem.Deals?.Count ?? 0)</div>
                                                            <small class="text-muted">Deals</small>
                                                        </div>
                                                    </div>
                                                </td>
                                                <td>
                                                    <span class="badge badge-info">@(oem.PaymentTerms ?? "Not set")</span>
                                                </td>
                                                <td>
                                                    <div class="btn-group" role="group">
                                                        <a asp-action="Details" asp-route-id="@oem.OemId" class="btn btn-sm btn-outline-info" title="View Details">
                                                            <i class="fas fa-eye"></i>
                                                        </a>
                                                        <a asp-action="Edit" asp-route-id="@oem.OemId" class="btn btn-sm btn-outline-warning" title="Edit">
                                                            <i class="fas fa-edit"></i>
                                                        </a>
                                                        <div class="dropdown">
                                                            <button class="btn btn-sm btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown">
                                                                <i class="fas fa-ellipsis-v"></i>
                                                            </button>
                                                            <ul class="dropdown-menu">
                                                                <li><a class="dropdown-item" asp-controller="Products" asp-action="Index" asp-route-oemId="@oem.OemId">
                                                                    <i class="fas fa-box"></i> View Products
                                                                </a></li>
                                                                <li><a class="dropdown-item" asp-action="Delete" asp-route-id="@oem.OemId">
                                                                    <i class="fas fa-archive"></i> Archive
                                                                </a></li>
                                                            </ul>
                                                        </div>
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    }
                                    else
                                    {
                                        <tr>
                                            <td colspan="7" class="text-center text-muted py-4">
                                                <i class="fas fa-building fa-3x mb-3"></i>
                                                <br>No OEM partners found. <a asp-action="Create">Add the first OEM partner</a>.
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

