@model License_Tracking.Models.Company

@{
    ViewData["Title"] = "Archive Company";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-lg-8 mx-auto">
            <div class="card border-warning">
                <div class="card-header bg-warning text-dark d-flex justify-content-between align-items-center">
                    <h3 class="card-title mb-0">
                        <i class="fas fa-archive mr-2"></i>Archive Company
                    </h3>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left mr-1"></i>Back to List
                    </a>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <h5><i class="fas fa-exclamation-triangle mr-2"></i>Are you sure you want to archive this company?</h5>
                        <p class="mb-0">This action will mark the company as inactive and hide it from active lists. Related contacts, deals, and OEM products will remain accessible but will be marked as archived.</p>
                    </div>
                    
                    <!-- Company Information Display -->
                    <div class="card bg-light">
                        <div class="card-header">
                            <h5 class="card-title mb-0">Company Information</h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <dl class="row">
                                        <dt class="col-sm-5">Company Name:</dt>
                                        <dd class="col-sm-7"><strong>@Model.CompanyName</strong></dd>
                                        
                                        <dt class="col-sm-5">Industry:</dt>
                                        <dd class="col-sm-7">@Model.Industry</dd>
                                        
                                        <dt class="col-sm-5">Type:</dt>
                                        <dd class="col-sm-7">
                                            <span class="badge badge-@(Model.CompanyType switch 
                                            {
                                                "Customer" => "success",
                                                "Prospect" => "warning", 
                                                "Partner" => "info",
                                                _ => "secondary"
                                            })">
                                                @Model.CompanyType
                                            </span>
                                        </dd>
                                        
                                        <dt class="col-sm-5">Status:</dt>
                                        <dd class="col-sm-7">@(Model.IsActive ? "Active" : "Inactive")</dd>
                                    </dl>
                                </div>
                                <div class="col-md-6">
                                    <dl class="row">
                                        <dt class="col-sm-5">Email:</dt>
                                        <dd class="col-sm-7">@(Model.Email ?? "Not provided")</dd>
                                        
                                        <dt class="col-sm-5">Contact Number:</dt>
                                        <dd class="col-sm-7">@(Model.ContactNumber ?? "Not provided")</dd>
                                        
                                        <dt class="col-sm-5">Created:</dt>
                                        <dd class="col-sm-7">@Model.CreatedDate.ToString("MM/dd/yyyy")</dd>
                                    </dl>
                                </div>
                            </div>
                            
                            @if (!string.IsNullOrEmpty(Model.Address))
                            {
                                <div class="row mt-3">
                                    <div class="col-12">
                                        <strong>Address:</strong>
                                        <p class="text-muted mb-0">@Model.Address</p>
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                    
                    <!-- Impact Assessment -->
                    <div class="card border-info mt-3">
                        <div class="card-header bg-info text-white">
                            <h6 class="card-title mb-0">
                                <i class="fas fa-info-circle mr-2"></i>Impact Assessment
                            </h6>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="text-center">
                                        <h4 class="text-primary">@(Model.ContactPersons?.Count ?? 0)</h4>
                                        <small class="text-muted">Related Contacts</small>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="text-center">
                                        <h4 class="text-success">@(Model.Deals?.Count ?? 0)</h4>
                                        <small class="text-muted">Related Deals</small>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="text-center">
                                        <h4 class="text-info">@(Model.CustomerOemProducts?.Count ?? 0)</h4>
                                        <small class="text-muted">OEM Products</small>
                                    </div>
                                </div>
                            </div>
                            
                            @if ((Model.ContactPersons?.Count ?? 0) > 0 || (Model.Deals?.Count ?? 0) > 0 || (Model.CustomerOemProducts?.Count ?? 0) > 0)
                            {
                                <div class="alert alert-info mt-3 mb-0">
                                    <small>
                                        <i class="fas fa-lightbulb mr-1"></i>
                                        <strong>Note:</strong> All related records will be preserved and accessible through archived records.
                                    </small>
                                </div>
                            }
                        </div>
                    </div>
                    
                    <!-- Action Buttons -->
                    <form asp-action="Delete" method="post" class="mt-4">
                        <input type="hidden" asp-for="CompanyId" />
                        
                        <div class="d-flex justify-content-between">
                            <div>
                                <a asp-action="Details" asp-route-id="@Model.CompanyId" class="btn btn-info">
                                    <i class="fas fa-eye mr-1"></i>View Details
                                </a>
                                <a asp-action="Edit" asp-route-id="@Model.CompanyId" class="btn btn-warning">
                                    <i class="fas fa-edit mr-1"></i>Edit Instead
                                </a>
                            </div>
                            <div>
                                <a asp-action="Index" class="btn btn-secondary mr-2">
                                    <i class="fas fa-times mr-1"></i>Cancel
                                </a>
                                <button type="submit" class="btn btn-danger" onclick="return confirm('Are you absolutely sure you want to archive this company? This action cannot be easily undone.')">
                                    <i class="fas fa-archive mr-1"></i>Archive Company
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Additional confirmation for high-impact deletions
        $('form').on('submit', function(e) {
            const contactsCount = @(Model.ContactPersons?.Count ?? 0);
            const dealsCount = @(Model.Deals?.Count ?? 0);
            const productsCount = @(Model.CustomerOemProducts?.Count ?? 0);
            
            if (contactsCount > 0 || dealsCount > 0 || productsCount > 0) {
                if (!confirm(`This company has ${contactsCount} contacts, ${dealsCount} deals, and ${productsCount} OEM products. Are you sure you want to archive it?`)) {
                    e.preventDefault();
                    return false;
                }
            }
        });
    </script>
}
