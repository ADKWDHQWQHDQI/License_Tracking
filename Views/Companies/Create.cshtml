@model License_Tracking.Models.Company

@{
    ViewData["Title"] = "Add Customer/Company - CBMS B2B2B CRM";
}

<div class="container-fluid">
    <!-- Header Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="text-primary mb-1">
                        <i class="fas fa-building"></i> Add Customer/Company
                    </h2>
                    <p class="text-muted mb-0">Complete customer profile with business details</p>
                </div>
                <div>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Back to Companies
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Company Form -->
    <div class="row">
        <div class="col-lg-10 mx-auto">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <form asp-action="Create" method="post" id="companyCreateForm">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <!-- Basic Company Information -->
                        <div class="section-header mb-4">
                            <h5 class="text-primary border-bottom pb-2 mb-3">
                                <i class="fas fa-info-circle"></i> Basic Company Information
                            </h5>

                            <div class="row">
                                <div class="col-md-8">
                                    <div class="form-group mb-3">
                                        <label asp-for="CompanyName" class="form-label fw-semibold">
                                            Company Name <span class="text-danger">*</span>
                                        </label>
                                        <input asp-for="CompanyName" class="form-control"
                                            placeholder="Enter full company name" required />
                                        <span asp-validation-for="CompanyName" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-group mb-3">
                                        <label asp-for="CompanyType" class="form-label fw-semibold">
                                            Company Type <span class="text-danger">*</span>
                                        </label>
                                        <select asp-for="CompanyType" class="form-select" required id="CompanyType">
                                            <option value="">Select Type</option>
                                            <option value="Customer">Customer</option>
                                            <option value="Prospect">Prospect</option>
                                            <option value="Partner">Partner</option>
                                        </select>
                                        <span asp-validation-for="CompanyType" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group mb-3">
                                        <label asp-for="Industry" class="form-label fw-semibold">
                                            Industry <span class="text-danger">*</span>
                                        </label>
                                        <select asp-for="Industry" class="form-select" required id="Industry">
                                            <option value="">Select Industry</option>
                                            <option value="Technology">Technology</option>
                                            <option value="Manufacturing">Manufacturing</option>
                                            <option value="Healthcare">Healthcare</option>
                                            <option value="Finance">Finance</option>
                                            <option value="Education">Education</option>
                                            <option value="Retail">Retail</option>
                                            <option value="Government">Government</option>
                                            <option value="Consulting">Consulting</option>
                                            <option value="Non-Profit">Non-Profit</option>
                                            <option value="Other">Other</option>
                                        </select>
                                        <span asp-validation-for="Industry" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group mb-3">
                                        <label asp-for="CompanySize" class="form-label fw-semibold">
                                            Company Size
                                        </label>
                                        <select asp-for="CompanySize" class="form-select">
                                            <option value="">Select Size</option>
                                            <option value="1-50">1-50 employees</option>
                                            <option value="51-200">51-200 employees</option>
                                            <option value="201-1000">201-1000 employees</option>
                                            <option value="1000+">1000+ employees</option>
                                        </select>
                                        <span asp-validation-for="CompanySize" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Contact Information -->
                        <div class="section-header mb-4">
                            <h5 class="text-primary border-bottom pb-2 mb-3">
                                <i class="fas fa-address-card"></i> Contact Information
                            </h5>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group mb-3">
                                        <label asp-for="Email" class="form-label fw-semibold">
                                            Primary Email <span class="text-danger">*</span>
                                        </label>
                                        <input asp-for="Email" type="email" class="form-control"
                                            placeholder="company@example.com" required id="Email" />
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group mb-3">
                                        <label asp-for="ContactNumber" class="form-label fw-semibold">
                                            Contact Number <span class="text-danger">*</span>
                                        </label>
                                        <input asp-for="ContactNumber" class="form-control"
                                            placeholder="+1 (555) 123-4567" required id="ContactNumber" />
                                        <span asp-validation-for="ContactNumber" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group mb-3">
                                        <label asp-for="Website" class="form-label fw-semibold">
                                            Website
                                        </label>
                                        <input asp-for="Website" type="url" class="form-control"
                                            placeholder="https://www.company.com" id="Website" />
                                        <span asp-validation-for="Website" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group mb-3">
                                        <label asp-for="Headquarters" class="form-label fw-semibold">
                                            Headquarters Location
                                        </label>
                                        <input asp-for="Headquarters" class="form-control"
                                            placeholder="City, Country" />
                                        <span asp-validation-for="Headquarters" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group mb-3">
                                <label asp-for="Address" class="form-label fw-semibold">
                                    Complete Business Address
                                </label>
                                <textarea asp-for="Address" class="form-control" rows="3"
                                    placeholder="Enter complete business address including street, city, state, postal code"></textarea>
                                <span asp-validation-for="Address" class="text-danger"></span>
                            </div>
                        </div>

                        <!-- Business Details -->
                        <div class="section-header mb-4">
                            <h5 class="text-primary border-bottom pb-2 mb-3">
                                <i class="fas fa-chart-line"></i> Business Details
                            </h5>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group mb-3">
                                        <label asp-for="AnnualRevenue" class="form-label fw-semibold">
                                            Annual Revenue (USD)
                                        </label>
                                        <input asp-for="AnnualRevenue" type="number" class="form-control"
                                            placeholder="e.g., 5000000" step="1000" id="AnnualRevenue" />
                                        <span asp-validation-for="AnnualRevenue" class="text-danger"></span>
                                        <small class="form-text text-muted">Optional - helps in deal sizing</small>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group mb-3">
                                        <label asp-for="PaymentTerms" class="form-label fw-semibold">
                                            Preferred Payment Terms
                                        </label>
                                        <select asp-for="PaymentTerms" class="form-select">
                                            <option value="">Select Payment Terms</option>
                                            <option value="Net 30">Net 30</option>
                                            <option value="Net 45">Net 45</option>
                                            <option value="Net 60">Net 60</option>
                                            <option value="Immediate">Immediate</option>
                                            <option value="Custom">Custom Terms</option>
                                        </select>
                                        <span asp-validation-for="PaymentTerms" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group mb-3">
                                <label asp-for="PrimaryBusiness" class="form-label fw-semibold">
                                    Primary Business Activities
                                </label>
                                <textarea asp-for="PrimaryBusiness" class="form-control" rows="2"
                                    placeholder="Describe the company's main business activities and focus areas"></textarea>
                                <span asp-validation-for="PrimaryBusiness" class="text-danger"></span>
                            </div>

                            <div class="form-group mb-3">
                                <label asp-for="TechnologyStack" class="form-label fw-semibold">
                                    Technology Stack & Environment
                                </label>
                                <textarea asp-for="TechnologyStack" class="form-control" rows="2"
                                    placeholder="Current technology environment, platforms, and tools used"></textarea>
                                <span asp-validation-for="TechnologyStack" class="text-danger"></span>
                                <small class="form-text text-muted">Helps in product recommendation and
                                    compatibility</small>
                            </div>

                            <div class="form-group mb-3">
                                <label asp-for="CurrentVendors" class="form-label fw-semibold">
                                    Current Vendor Relationships
                                </label>
                                <textarea asp-for="CurrentVendors" class="form-control" rows="2"
                                    placeholder="Existing vendor partnerships and technology suppliers"></textarea>
                                <span asp-validation-for="CurrentVendors" class="text-danger"></span>
                                <small class="form-text text-muted">Understanding existing relationships helps in
                                    positioning</small>
                            </div>
                        </div>

                        <!-- Form Actions -->
                        <div class="border-top pt-4">
                            <div class="d-flex justify-content-between">
                                <a asp-action="Index" class="btn btn-outline-secondary">
                                    <i class="fas fa-times me-2"></i>Cancel
                                </a>
                                <div>
                                    <button type="button" class="btn btn-outline-primary me-2" id="saveAsDraftBtn">
                                        <i class="fas fa-save me-2"></i>Save as Draft
                                    </button>
                                    <button type="submit" class="btn btn-primary">
                                        <i class="fas fa-plus me-2"></i>Create Company
                                    </button>
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    @Html.Raw(@"<script>
        $(document).ready(function () {
            // Auto-format phone number
            $('#ContactNumber').on('input', function () {
                let value = this.value.replace(/\D/g, '');
                if (value.length >= 10) {
                    value = value.replace(/(\d{3})(\d{3})(\d{4})/, '($1) $2-$3');
                }
                this.value = value;
            });

            // Auto-format website URL
            $('#Website').on('blur', function () {
                let value = this.value.trim();
                if (value && !value.startsWith('http://') && !value.startsWith('https://')) {
                    this.value = 'https://' + value;
                }
            });

            // Auto-format annual revenue with commas
            $('#AnnualRevenue').on('input', function () {
                let value = this.value.replace(/,/g, '');
                if (!isNaN(value) && value !== '') {
                    this.value = parseFloat(value).toLocaleString();
                }
            });

            // Save as draft functionality
            $('#saveAsDraftBtn').click(function () {
                $('#companyCreateForm').append('<input type=""hidden"" name=""saveAsDraft"" value=""true"" />');
                $('#companyCreateForm').submit();
            });

            // Form validation enhancements
            $('#companyCreateForm').on('submit', function (e) {
                let isValid = true;
                let errors = [];

                // Custom validation rules
                if ($('#CompanyName').val().trim().length < 2) {
                    errors.push('Company name must be at least 2 characters long');
                    isValid = false;
                }

                const email = $('#Email').val();
                if (email && !email.includes('@')) {
                    errors.push('Please enter a valid email address');
                    isValid = false;
                }

                const website = $('#Website').val();
                if (website && !website.match(/^https?:\/\/.+/)) {
                    errors.push('Website must be a valid URL');
                    isValid = false;
                }

                if (!isValid) {
                    e.preventDefault();
                    alert('Please fix the following errors:\n\n' + errors.join('\n'));
                }
            });

            // Auto-suggest company type based on industry
            $('#Industry').change(function () {
                const industry = $(this).val();
                if (!$('#CompanyType').val()) {
                    // Auto-suggest based on common patterns
                    if (industry === 'Government') {
                        $('#CompanyType').val('Customer');
                    } else if (['Technology', 'Consulting'].includes(industry)) {
                        $('#CompanyType').val('Prospect');
                    }
                }
            });

            // Character counters for text areas
            $('textarea').each(function () {
                const maxLength = $(this).attr('maxlength') || 500;
                const textarea = $(this);
                const counter = $('<small class=""form-text text-muted char-counter""></small>');
                textarea.after(counter);

                textarea.on('input', function () {
                    const remaining = maxLength - this.value.length;
                    counter.text(remaining + ' characters remaining');

                    if (remaining < 50) {
                        counter.addClass('text-warning');
                    } else {
                        counter.removeClass('text-warning');
                    }
                });

                textarea.trigger('input'); // Initialize counter
            });
        });
    </script>")
}