@model License_Tracking.Models.Company

@{
    ViewData["Title"] = $"{Model.CompanyName} - Customer Profile";
}

<div class="container-fluid">
    <!-- Header Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="text-primary mb-1">
                        <i class="fas fa-building"></i> @Model.CompanyName - Customer Profile
                    </h2>
                    <p class="text-muted mb-0">
                        <span class="badge badge-@(Model.CompanyType switch 
                        {
                            "Customer" => "success",
                            "Prospect" => "warning", 
                            "Partner" => "info",
                            _ => "secondary"
                        }) mr-2">@Model.CompanyType</span>
                        @Model.Industry | @Model.CompanySize employees
                    </p>
                </div>
                <div>
                    <a asp-action="Edit" asp-route-id="@Model.CompanyId" class="btn btn-warning">
                        <i class="fas fa-edit mr-1"></i>Edit Company
                    </a>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left mr-1"></i>Back to List
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Navigation Pills for Customer Management Features -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title mb-3">
                        <i class="fas fa-tachometer-alt text-primary"></i> Customer Management Dashboard
                    </h5>
                    <div class="row">
                        <div class="col-md-3 mb-3">
                            <a asp-action="Details" asp-route-id="@Model.CompanyId" class="btn btn-outline-primary btn-block">
                                <i class="fas fa-info-circle"></i><br>
                                <strong>Company Overview</strong><br>
                                <small>View detailed company information</small>
                            </a>
                        </div>
                        <div class="col-md-3 mb-3">
                            <a asp-action="ContactManagement" asp-route-id="@Model.CompanyId" class="btn btn-outline-success btn-block">
                                <i class="fas fa-users"></i><br>
                                <strong>Contact Management</strong><br>
                                <small>Manage contacts & decision makers</small>
                            </a>
                        </div>
                        <div class="col-md-3 mb-3">
                            <a asp-action="OemRelationships" asp-route-id="@Model.CompanyId" class="btn btn-outline-info btn-block">
                                <i class="fas fa-handshake"></i><br>
                                <strong>OEM Relationships</strong><br>
                                <small>Track customer-OEM partnerships</small>
                            </a>
                        </div>
                        <div class="col-md-3 mb-3">
                            <a asp-action="ActivityTracking" asp-route-id="@Model.CompanyId" class="btn btn-outline-warning btn-block">
                                <i class="fas fa-history"></i><br>
                                <strong>Activity Tracking</strong><br>
                                <small>Log and track customer activities</small>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Quick Stats Cards -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="card bg-primary text-white">
                <div class="card-body text-center">
                    <h3>@(Model.ContactPersons?.Count ?? 0)</h3>
                    <p class="mb-0">Contacts</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-success text-white">
                <div class="card-body text-center">
                    <h3>@(Model.Deals?.Count ?? 0)</h3>
                    <p class="mb-0">Deals</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-info text-white">
                <div class="card-body text-center">
                    <h3>@(Model.CustomerOemProducts?.Count ?? 0)</h3>
                    <p class="mb-0">OEM Products</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card bg-warning text-white">
                <div class="card-body text-center">
                    <h3>@Model.CreatedDate.Year</h3>
                    <p class="mb-0">Customer Since</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Activity Summary -->
    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="fas fa-chart-line text-primary"></i> Company Overview
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-5">Industry:</dt>
                                <dd class="col-sm-7">@(Model.Industry ?? "Not specified")</dd>
                                
                                <dt class="col-sm-5">Company Size:</dt>
                                <dd class="col-sm-7">@(Model.CompanySize ?? "Not specified")</dd>
                                
                                <dt class="col-sm-5">Revenue:</dt>
                                <dd class="col-sm-7">@(Model.AnnualRevenue?.ToString("C") ?? "Not disclosed")</dd>
                                
                                <dt class="col-sm-5">Payment Terms:</dt>
                                <dd class="col-sm-7">@(Model.PaymentTerms ?? "Standard")</dd>
                            </dl>
                        </div>
                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-5">Email:</dt>
                                <dd class="col-sm-7">
                                    @if (!string.IsNullOrEmpty(Model.Email))
                                    {
                                        <a href="mailto:@Model.Email">@Model.Email</a>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Not provided</span>
                                    }
                                </dd>
                                
                                <dt class="col-sm-5">Phone:</dt>
                                <dd class="col-sm-7">
                                    @if (!string.IsNullOrEmpty(Model.ContactNumber))
                                    {
                                        <a href="tel:@Model.ContactNumber">@Model.ContactNumber</a>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Not provided</span>
                                    }
                                </dd>
                                
                                <dt class="col-sm-5">Website:</dt>
                                <dd class="col-sm-7">
                                    @if (!string.IsNullOrEmpty(Model.Website))
                                    {
                                        <a href="@Model.Website" target="_blank">@Model.Website</a>
                                    }
                                    else
                                    {
                                        <span class="text-muted">Not provided</span>
                                    }
                                </dd>
                                
                                <dt class="col-sm-5">Created:</dt>
                                <dd class="col-sm-7">@Model.CreatedDate.ToString("MMMM dd, yyyy")</dd>
                            </dl>
                        </div>
                    </div>
                    
                    @if (!string.IsNullOrEmpty(Model.Address))
                    {
                        <div class="row mt-3">
                            <div class="col-12">
                                <h6><i class="fas fa-map-marker-alt text-primary"></i> Address:</h6>
                                <p class="text-muted">@Model.Address</p>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="fas fa-bolt text-warning"></i> Quick Actions
                    </h5>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a asp-action="ContactManagement" asp-route-id="@Model.CompanyId" class="btn btn-outline-primary">
                            <i class="fas fa-user-plus"></i> Add Contact
                        </a>
                        <button type="button" class="btn btn-outline-success" onclick="createDeal()">
                            <i class="fas fa-handshake"></i> Create Deal
                        </button>
                        <a asp-action="OemRelationships" asp-route-id="@Model.CompanyId" class="btn btn-outline-info">
                            <i class="fas fa-link"></i> Assign Product
                        </a>
                        <a asp-action="ActivityTracking" asp-route-id="@Model.CompanyId" class="btn btn-outline-warning">
                            <i class="fas fa-plus-circle"></i> Log Activity
                        </a>
                    </div>
                </div>
            </div>
            
            @if (Model.ContactPersons?.Any() == true)
            {
                <div class="card mt-3">
                    <div class="card-header">
                        <h6 class="mb-0">
                            <i class="fas fa-users text-primary"></i> Key Contacts
                        </h6>
                    </div>
                    <div class="card-body">
                        @foreach (var contact in Model.ContactPersons.Take(3))
                        {
                            <div class="border-bottom pb-2 mb-2">
                                <strong>@contact.Name</strong>
                                @if (contact.IsPrimaryContact)
                                {
                                    <span class="badge badge-success badge-sm">Primary</span>
                                }
                                <br>
                                <small class="text-muted">@contact.Designation</small><br>
                                @if (!string.IsNullOrEmpty(contact.Email))
                                {
                                    <small><a href="mailto:@contact.Email">@contact.Email</a></small>
                                }
                            </div>
                        }
                        @if (Model.ContactPersons.Count > 3)
                        {
                            <small class="text-muted">+@(Model.ContactPersons.Count - 3) more contacts</small>
                        }
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function createDeal() {
            alert('Deal creation will be implemented in Phase 3 with 4-phase workflow management.');
        }
    </script>
}
