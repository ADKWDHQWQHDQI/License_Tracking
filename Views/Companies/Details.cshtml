@model License_Tracking.Models.Company

@{
    ViewData["Title"] = $"{Model.CompanyName} - Customer Profile";
}

<div class="container-fluid">
    <!-- Header Section -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <h2 class="text-primary mb-1">
                        <i class="fas fa-building"></i> @Model.CompanyName
                    </h2>
                    <p class="text-muted mb-0">
                        <span class="badge badge-@(Model.CompanyType switch 
                        {
                            "Customer" => "success",
                            "Prospect" => "warning", 
                            "Partner" => "info",
                            _ => "secondary"
                        }) mr-2">@Model.CompanyType</span>
                        @Model.Industry | @Model.CompanySize employees
                    </p>
                </div>
                <div>
                    <a asp-action="Edit" asp-route-id="@Model.CompanyId" class="btn btn-warning">
                        <i class="fas fa-edit mr-1"></i>Edit Company
                    </a>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left mr-1"></i>Back to List
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Tabbed Interface -->
    <div class="row">
        <div class="col-12">
            <div class="card border-0 shadow-sm">
                <!-- Tab Navigation -->
                <div class="card-header bg-white border-bottom">
                    <ul class="nav nav-tabs card-header-tabs" id="companyTabs" role="tablist">
                        <li class="nav-item" role="presentation">
                            <button class="nav-link active" id="overview-tab" data-bs-toggle="tab" data-bs-target="#overview" type="button" role="tab">
                                <i class="fas fa-info-circle"></i> Company Overview
                            </button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="contacts-tab" data-bs-toggle="tab" data-bs-target="#contacts" type="button" role="tab">
                                <i class="fas fa-users"></i> Contact Management
                            </button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="relationships-tab" data-bs-toggle="tab" data-bs-target="#relationships" type="button" role="tab">
                                <i class="fas fa-handshake"></i> OEM Relationships
                            </button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="activity-tab" data-bs-toggle="tab" data-bs-target="#activity" type="button" role="tab">
                                <i class="fas fa-history"></i> Activity Tracking
                            </button>
                        </li>
                        <li class="nav-item" role="presentation">
                            <button class="nav-link" id="deals-tab" data-bs-toggle="tab" data-bs-target="#deals" type="button" role="tab">
                                <i class="fas fa-handshake"></i> Deals & Projects
                            </button>
                        </li>
                    </ul>
                </div>
                
                <!-- Tab Content -->
                <div class="card-body">
                    <div class="tab-content" id="companyTabContent">
                        
                        <!-- Company Overview Tab -->
                        <div class="tab-pane fade show active" id="overview" role="tabpanel">
                            <div class="row">
                                <!-- Company Information -->
                                <div class="col-lg-8">
                                    <div class="card h-100">
                                        <div class="card-header">
                                            <h5 class="card-title mb-0">
                                                <i class="fas fa-info-circle text-primary"></i> Company Information
                                            </h5>
                                        </div>
                                        <div class="card-body">
                                            <div class="row">
                                                <div class="col-md-6">
                                                    <dl class="row">
                                                        <dt class="col-sm-5">Company Name:</dt>
                                                        <dd class="col-sm-7"><strong>@Model.CompanyName</strong></dd>
                                                        
                                                        <dt class="col-sm-5">Industry:</dt>
                                                        <dd class="col-sm-7">@(Model.Industry ?? "Not specified")</dd>
                                                        
                                                        <dt class="col-sm-5">Company Size:</dt>
                                                        <dd class="col-sm-7">@(Model.CompanySize ?? "Not specified")</dd>
                                                        
                                                        <dt class="col-sm-5">Annual Revenue:</dt>
                                                        <dd class="col-sm-7">@(Model.AnnualRevenue?.ToString("C") ?? "Not disclosed")</dd>
                                                    </dl>
                                                </div>
                                                <div class="col-md-6">
                                                    <dl class="row">
                                                        <dt class="col-sm-5">Email:</dt>
                                                        <dd class="col-sm-7">
                                                            @if (!string.IsNullOrEmpty(Model.Email))
                                                            {
                                                                <a href="mailto:@Model.Email">@Model.Email</a>
                                                            }
                                                            else
                                                            {
                                                                <span class="text-muted">Not provided</span>
                                                            }
                                                        </dd>
                                                        
                                                        <dt class="col-sm-5">Phone:</dt>
                                                        <dd class="col-sm-7">
                                                            @if (!string.IsNullOrEmpty(Model.ContactNumber))
                                                            {
                                                                <a href="tel:@Model.ContactNumber">@Model.ContactNumber</a>
                                                            }
                                                            else
                                                            {
                                                                <span class="text-muted">Not provided</span>
                                                            }
                                                        </dd>
                                                        
                                                        <dt class="col-sm-5">Website:</dt>
                                                        <dd class="col-sm-7">
                                                            @if (!string.IsNullOrEmpty(Model.Website))
                                                            {
                                                                <a href="@Model.Website" target="_blank">@Model.Website</a>
                                                            }
                                                            else
                                                            {
                                                                <span class="text-muted">Not provided</span>
                                                            }
                                                        </dd>
                                                        
                                                        <dt class="col-sm-5">Payment Terms:</dt>
                                                        <dd class="col-sm-7">@(Model.PaymentTerms ?? "Not specified")</dd>
                                                    </dl>
                                                </div>
                                            </div>
                                            
                                            @if (!string.IsNullOrEmpty(Model.Address))
                                            {
                                                <div class="row mt-3">
                                                    <div class="col-12">
                                                        <h6><i class="fas fa-map-marker-alt text-primary"></i> Address:</h6>
                                                        <p class="text-muted">@Model.Address</p>
                                                    </div>
                                                </div>
                                            }
                                            
                                            @if (!string.IsNullOrEmpty(Model.PrimaryBusiness))
                                            {
                                                <div class="row mt-3">
                                                    <div class="col-12">
                                                        <h6><i class="fas fa-briefcase text-primary"></i> Primary Business:</h6>
                                                        <p class="text-muted">@Model.PrimaryBusiness</p>
                                                    </div>
                                                </div>
                                            }
                                            
                                            @if (!string.IsNullOrEmpty(Model.TechnologyStack))
                                            {
                                                <div class="row mt-3">
                                                    <div class="col-12">
                                                        <h6><i class="fas fa-code text-primary"></i> Technology Stack:</h6>
                                                        <p class="text-muted">@Model.TechnologyStack</p>
                                                    </div>
                                                </div>
                                            }
                                        </div>
                                    </div>
                                </div>
                                
                                <!-- Quick Stats -->
                                <div class="col-lg-4">
                                    <div class="card h-100">
                                        <div class="card-header">
                                            <h5 class="card-title mb-0">
                                                <i class="fas fa-chart-line text-success"></i> Quick Stats
                                            </h5>
                                        </div>
                                        <div class="card-body">
                                            <div class="row text-center">
                                                <div class="col-6">
                                                    <div class="card bg-primary text-white">
                                                        <div class="card-body">
                                                            <h3>@(Model.ContactPersons?.Count ?? 0)</h3>
                                                            <small>Contacts</small>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-6">
                                                    <div class="card bg-success text-white">
                                                        <div class="card-body">
                                                            <h3>@(Model.Deals?.Count ?? 0)</h3>
                                                            <small>Deals</small>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="row text-center mt-3">
                                                <div class="col-6">
                                                    <div class="card bg-info text-white">
                                                        <div class="card-body">
                                                            <h3>@(Model.CustomerOemProducts?.Count ?? 0)</h3>
                                                            <small>Products</small>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-6">
                                                    <div class="card bg-warning text-white">
                                                        <div class="card-body">
                                                            <h3>@(Model.CreatedDate.Year)</h3>
                                                            <small>Since</small>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            
                                            <div class="mt-4">
                                                <h6>Company Status</h6>
                                                <span class="badge badge-@(Model.CompanyType switch 
                                                {
                                                    "Customer" => "success",
                                                    "Prospect" => "warning", 
                                                    "Partner" => "info",
                                                    _ => "secondary"
                                                }) badge-lg">@Model.CompanyType</span>
                                                
                                                @if (Model.IsActive)
                                                {
                                                    <span class="badge badge-success badge-lg ml-2">Active</span>
                                                }
                                                else
                                                {
                                                    <span class="badge badge-secondary badge-lg ml-2">Inactive</span>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Contact Management Tab -->
                        <div class="tab-pane fade" id="contacts" role="tabpanel">
                            <div class="d-flex justify-content-between align-items-center mb-4">
                                <h5><i class="fas fa-users text-primary"></i> Contact Management</h5>
                                <button class="btn btn-primary" onclick="addNewContact()">
                                    <i class="fas fa-plus"></i> Add New Contact
                                </button>
                            </div>
                            
                            @if (Model.ContactPersons?.Any() == true)
                            {
                                <div class="row">
                                    @foreach (var contact in Model.ContactPersons)
                                    {
                                        <div class="col-md-6 col-lg-4 mb-3">
                                            <div class="card h-100">
                                                <div class="card-body">
                                                    <div class="d-flex justify-content-between align-items-start">
                                                        <h6 class="card-title mb-1">@contact.Name</h6>
                                                        @if (contact.IsPrimaryContact)
                                                        {
                                                            <span class="badge badge-success">Primary</span>
                                                        }
                                                    </div>
                                                    <p class="card-text">
                                                        <small class="text-muted">@contact.Designation</small><br>
                                                        <small class="text-muted">@contact.Department</small><br>
                                                        <span class="badge badge-@(contact.DecisionMakerLevel switch 
                                                        {
                                                            "Primary" => "success",
                                                            "Secondary" => "warning",
                                                            "Influencer" => "info",
                                                            _ => "secondary"
                                                        })">@contact.DecisionMakerLevel</span>
                                                    </p>
                                                    <div class="contact-actions">
                                                        @if (!string.IsNullOrEmpty(contact.Email))
                                                        {
                                                            <a href="mailto:@contact.Email" class="btn btn-sm btn-outline-primary">
                                                                <i class="fas fa-envelope"></i>
                                                            </a>
                                                        }
                                                        @if (!string.IsNullOrEmpty(contact.Number))
                                                        {
                                                            <a href="tel:@contact.Number" class="btn btn-sm btn-outline-primary">
                                                                <i class="fas fa-phone"></i>
                                                            </a>
                                                        }
                                                        <button class="btn btn-sm btn-outline-secondary" onclick="editContact(@contact.ContactId)">
                                                            <i class="fas fa-edit"></i>
                                                        </button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            }
                            else
                            {
                                <div class="text-center py-5">
                                    <i class="fas fa-users fa-3x text-muted mb-3"></i>
                                    <h5 class="text-muted">No Contacts Added</h5>
                                    <p class="text-muted">Start building your contact network by adding key decision makers.</p>
                                    <button class="btn btn-primary" onclick="addNewContact()">
                                        <i class="fas fa-plus"></i> Add First Contact
                                    </button>
                                </div>
                            }
                        </div>
                        
                        <!-- OEM Relationships Tab -->
                        <div class="tab-pane fade" id="relationships" role="tabpanel">
                            <div class="d-flex justify-content-between align-items-center mb-4">
                                <h5><i class="fas fa-handshake text-primary"></i> OEM Relationships</h5>
                                <button class="btn btn-primary" onclick="assignOemProduct()">
                                    <i class="fas fa-plus"></i> Assign OEM Product
                                </button>
                            </div>
                            
                            @if (Model.CustomerOemProducts?.Any() == true)
                            {
                                <div class="row">
                                    @foreach (var relationship in Model.CustomerOemProducts.GroupBy(x => x.Oem))
                                    {
                                        <div class="col-md-6 mb-4">
                                            <div class="card">
                                                <div class="card-header">
                                                    <h6 class="mb-0">
                                                        <i class="fas fa-building text-info"></i> @relationship.Key?.OemName
                                                    </h6>
                                                </div>
                                                <div class="card-body">
                                                    <h6>Assigned Products:</h6>
                                                    <ul class="list-unstyled">
                                                        @foreach (var product in relationship)
                                                        {
                                                            <li class="mb-2">
                                                                <span class="badge badge-light">@product.Product?.ProductName</span>
                                                                <br><small class="text-muted">@product.Product?.LicenseType</small>
                                                            </li>
                                                        }
                                                    </ul>
                                                    <small class="text-muted">
                                                        <i class="fas fa-calendar"></i> Since @relationship.Min(x => x.RelationshipStartDate)?.ToString("MMM yyyy")
                                                    </small>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            }
                            else
                            {
                                <div class="text-center py-5">
                                    <i class="fas fa-handshake fa-3x text-muted mb-3"></i>
                                    <h5 class="text-muted">No OEM Relationships</h5>
                                    <p class="text-muted">Establish partnerships by assigning OEM products to this customer.</p>
                                    <button class="btn btn-primary" onclick="assignOemProduct()">
                                        <i class="fas fa-plus"></i> Assign First Product
                                    </button>
                                </div>
                            }
                        </div>
                        
                        <!-- Activity Tracking Tab -->
                        <div class="tab-pane fade" id="activity" role="tabpanel">
                            <div class="d-flex justify-content-between align-items-center mb-4">
                                <h5><i class="fas fa-history text-primary"></i> Activity Tracking</h5>
                                <button class="btn btn-primary" onclick="logActivity()">
                                    <i class="fas fa-plus"></i> Log Activity
                                </button>
                            </div>
                            
                            <div class="timeline">
                                <!-- Sample Activity Items - This will be dynamic in Phase 2 -->
                                <div class="timeline-item">
                                    <div class="timeline-marker bg-success"></div>
                                    <div class="timeline-content">
                                        <h6 class="timeline-title">Company Created</h6>
                                        <p class="timeline-description">@Model.CompanyName was added to the CRM system.</p>
                                        <small class="text-muted">
                                            <i class="fas fa-calendar"></i> @Model.CreatedDate.ToString("MMMM dd, yyyy 'at' h:mm tt")
                                            @if (!string.IsNullOrEmpty(Model.CreatedBy))
                                            {
                                                <span>by @Model.CreatedBy</span>
                                            }
                                        </small>
                                    </div>
                                </div>
                                
                                @if (Model.LastModifiedDate != Model.CreatedDate)
                                {
                                    <div class="timeline-item">
                                        <div class="timeline-marker bg-warning"></div>
                                        <div class="timeline-content">
                                            <h6 class="timeline-title">Company Updated</h6>
                                            <p class="timeline-description">Company information was last modified.</p>
                                            <small class="text-muted">
                                                <i class="fas fa-calendar"></i> @Model.LastModifiedDate.ToString("MMMM dd, yyyy 'at' h:mm tt")
                                                @if (!string.IsNullOrEmpty(Model.LastModifiedBy))
                                                {
                                                    <span>by @Model.LastModifiedBy</span>
                                                }
                                            </small>
                                        </div>
                                    </div>
                                }
                                
                                @if (Model.ContactPersons?.Any() == true)
                                {
                                    @foreach (var contact in Model.ContactPersons.OrderBy(c => c.CreatedDate).Take(3))
                                    {
                                        <div class="timeline-item">
                                            <div class="timeline-marker bg-info"></div>
                                            <div class="timeline-content">
                                                <h6 class="timeline-title">Contact Added</h6>
                                                <p class="timeline-description">@contact.Name (@contact.Designation) was added as a contact.</p>
                                                <small class="text-muted">
                                                    <i class="fas fa-calendar"></i> @contact.CreatedDate.ToString("MMMM dd, yyyy")
                                                </small>
                                            </div>
                                        </div>
                                    }
                                }
                                
                                <!-- Placeholder for future activities -->
                                <div class="timeline-item">
                                    <div class="timeline-marker bg-light"></div>
                                    <div class="timeline-content">
                                        <h6 class="timeline-title text-muted">More Activities Coming</h6>
                                        <p class="timeline-description text-muted">Deal activities, communications, and system interactions will appear here in Phase 2.</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <!-- Deals & Projects Tab -->
                        <div class="tab-pane fade" id="deals" role="tabpanel">
                            <div class="d-flex justify-content-between align-items-center mb-4">
                                <h5><i class="fas fa-handshake text-primary"></i> Deals & Projects</h5>
                                <button class="btn btn-primary" onclick="createDeal()">
                                    <i class="fas fa-plus"></i> Create New Deal
                                </button>
                            </div>
                            
                            @if (Model.Deals?.Any() == true)
                            {
                                <div class="row">
                                    @foreach (var deal in Model.Deals)
                                    {
                                        <div class="col-md-6 col-lg-4 mb-3">
                                            <div class="card h-100">
                                                <div class="card-body">
                                                    <h6 class="card-title">@deal.DealName</h6>
                                                    <p class="card-text">
                                                        <span class="badge badge-@(deal.DealStage switch 
                                                        {
                                                            "Won" => "success",
                                                            "Lost" => "danger",
                                                            "Negotiation" => "warning",
                                                            _ => "info"
                                                        })">@deal.DealStage</span>
                                                        <br>
                                                        <small class="text-muted">Value: @deal.CustomerInvoiceAmount?.ToString("C")</small><br>
                                                        <small class="text-muted">Start: @deal.LicenseStartDate?.ToString("MMM dd, yyyy")</small>
                                                    </p>
                                                    <button class="btn btn-sm btn-outline-primary" onclick="viewDeal(@deal.DealId)">
                                                        View Details
                                                    </button>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                            }
                            else
                            {
                                <div class="text-center py-5">
                                    <i class="fas fa-handshake fa-3x text-muted mb-3"></i>
                                    <h5 class="text-muted">No Deals Yet</h5>
                                    <p class="text-muted">Start your business relationship by creating the first deal or project.</p>
                                    <button class="btn btn-primary" onclick="createDeal()">
                                        <i class="fas fa-plus"></i> Create First Deal
                                    </button>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Custom Styles for Timeline -->
<style>
    .timeline {
        position: relative;
        padding-left: 30px;
    }
    
    .timeline::before {
        content: '';
        position: absolute;
        left: 15px;
        top: 0;
        bottom: 0;
        width: 2px;
        background: #dee2e6;
    }
    
    .timeline-item {
        position: relative;
        margin-bottom: 30px;
    }
    
    .timeline-marker {
        position: absolute;
        left: -23px;
        top: 5px;
        width: 16px;
        height: 16px;
        border-radius: 50%;
        border: 2px solid #fff;
        box-shadow: 0 0 0 2px #dee2e6;
    }
    
    .timeline-content {
        background: #f8f9fa;
        padding: 15px;
        border-radius: 8px;
        border-left: 3px solid #007bff;
    }
    
    .timeline-title {
        margin-bottom: 5px;
        color: #495057;
    }
    
    .timeline-description {
        margin-bottom: 10px;
        color: #6c757d;
    }
    
    .contact-actions .btn {
        margin-right: 5px;
    }
    
    .badge-lg {
        font-size: 0.875rem;
        padding: 0.5rem 0.75rem;
    }
</style>

@section Scripts {
    <script>
        // Tab activation with Bootstrap 5 compatibility
        $(document).ready(function() {
            // Initialize Bootstrap tabs
            var triggerTabList = [].slice.call(document.querySelectorAll('#companyTabs button'))
            triggerTabList.forEach(function (triggerEl) {
                var tabTrigger = new bootstrap.Tab(triggerEl)
                
                triggerEl.addEventListener('click', function (event) {
                    event.preventDefault()
                    tabTrigger.show()
                })
            })
        });
        
        // Placeholder functions for Week 3 features - To be implemented in Phase 2
        function addNewContact() {
            alert('Contact management will be implemented in Phase 2 with full CRUD operations.');
        }
        
        function editContact(contactId) {
            alert('Contact editing will be implemented in Phase 2 - Contact ID: ' + contactId);
        }
        
        function assignOemProduct() {
            alert('OEM product assignment will be implemented in Phase 2 with OEM management.');
        }
        
        function logActivity() {
            alert('Activity logging will be implemented in Phase 2 with full CRM activity tracking.');
        }
        
        function createDeal() {
            alert('Deal creation will be implemented in Phase 3 with 4-phase workflow management.');
        }
        
        function viewDeal(dealId) {
            alert('Deal details will be implemented in Phase 3 - Deal ID: ' + dealId);
        }
    </script>
}
