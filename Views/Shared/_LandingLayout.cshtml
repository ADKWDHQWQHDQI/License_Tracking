<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CBMS | Canarys Business Management System</title>

    <!-- SEO Meta Tags -->
    <meta name="description"
        content="CBMS by Canarys - Production Enterprise B2B2B CRM for License Management. Internal platform for Canarys Automations license intermediary operations.">
    <meta name="keywords"
        content="CRM, B2B2B, License Management, Deal Pipeline, Software Procurement, Enterprise, Canarys">
    <meta name="author" content="Canarys Automations">

    <!-- Open Graph Meta Tags -->
    <meta property="og:title" content="CBMS by Canarys - Enterprise B2B2B CRM Platform">
    <meta property="og:description"
        content="Production platform for Canarys Automations license intermediary operations">
    <meta property="og:type" content="website">
    <meta property="og:image" content="~/images/cbms-hero.jpg">

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link
        href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&family=Poppins:wght@300;400;500;600;700;800&display=swap"
        rel="stylesheet">

    <!-- CSS Libraries -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/animate.css@4.1.1/animate.min.css">

    <!-- Custom Styles -->
    <link rel="stylesheet" href="~/css/bigin-theme.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/landing.css" asp-append-version="true" />

    @await RenderSectionAsync("Styles", required: false)
</head>

<body class="landing-page">
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-landing fixed-top">
        <div class="container">
            <a class="navbar-brand" href="#hero">
                <div class="brand-container">
                    <i class="fas fa-handshake brand-icon"></i>
                    <div class="brand-text">
                        <span class="brand-primary">CBMS</span>
                        <small class="brand-secondary">by Canarys</small>
                    </div>
                </div>
            </a>

            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav mx-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="#features">Features</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#solutions">Solutions</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#workflow">Workflow</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#benefits">Benefits</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#contact">Contact</a>
                    </li>
                </ul>

                <div class="navbar-actions">
                    <a asp-controller="Auth" asp-action="Login" class="btn btn-outline-primary me-2">
                        <i class="fas fa-sign-in-alt me-1"></i>Sign In
                    </a>
                    <a asp-controller="Auth" asp-action="Register" class="btn btn-primary">
                        <i class="fas fa-rocket me-1"></i>Get Started
                    </a>
                </div>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <main>
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="footer-landing">
        <div class="container">
            <div class="row">
                <div class="col-lg-4 mb-4">
                    <div class="footer-brand">
                        <div class="brand-container mb-3">
                            <i class="fas fa-handshake brand-icon"></i>
                            <div class="brand-text">
                                <span class="brand-primary">CBMS</span>
                                <small class="brand-secondary">by Canarys</small>
                            </div>
                        </div>
                        <p class="footer-description">
                            Enterprise B2B2B CRM platform designed for software license intermediaries.
                            Streamline deals, manage customer relationships, and optimize OEM partnerships.
                        </p>
                        <div class="social-links">
                            <a href="#" class="social-link"><i class="fab fa-linkedin"></i></a>
                            <a href="#" class="social-link"><i class="fab fa-twitter"></i></a>
                            <a href="#" class="social-link"><i class="fab fa-youtube"></i></a>
                        </div>
                    </div>
                </div>

                <div class="col-lg-2 col-md-6 mb-4">
                    <h5 class="footer-title">Product</h5>
                    <ul class="footer-links">
                        <li><a href="#features">Features</a></li>
                        <li><a href="#solutions">Solutions</a></li>
                        <li><a href="#workflow">Workflow</a></li>
                        <li><a href="#pricing">Pricing</a></li>
                    </ul>
                </div>

                <div class="col-lg-2 col-md-6 mb-4">
                    <h5 class="footer-title">Company</h5>
                    <ul class="footer-links">
                        <li><a href="#about">About Us</a></li>
                        <li><a href="#careers">Careers</a></li>
                        <li><a href="#news">News</a></li>
                        <li><a href="#contact">Contact</a></li>
                    </ul>
                </div>

                <div class="col-lg-2 col-md-6 mb-4">
                    <h5 class="footer-title">Resources</h5>
                    <ul class="footer-links">
                        <li><a href="#documentation">Documentation</a></li>
                        <li><a href="#support">Support</a></li>
                        <li><a href="#training">Training</a></li>
                        <li><a href="#api">API</a></li>
                    </ul>
                </div>

                <div class="col-lg-2 col-md-6 mb-4">
                    <h5 class="footer-title">Legal</h5>
                    <ul class="footer-links">
                        <li><a href="#privacy">Privacy Policy</a></li>
                        <li><a href="#terms">Terms of Service</a></li>
                        <li><a href="#security">Security</a></li>
                        <li><a href="#compliance">Compliance</a></li>
                    </ul>
                </div>
            </div>

            <hr class="footer-divider">

            <div class="row align-items-center">
                <div class="col-md-6">
                    <p class="footer-copyright">
                        Â© @DateTime.Now.Year Canarys Automations. All rights reserved.
                    </p>
                </div>
                <div class="col-md-6 text-md-end">
                    <p class="footer-meta">
                        Enterprise CRM | B2B2B Platform | Made with <i class="fas fa-heart text-danger"></i> in India
                    </p>
                </div>
            </div>
        </div>
    </footer>

    <!-- JavaScript -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/landing.js" asp-append-version="true"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
