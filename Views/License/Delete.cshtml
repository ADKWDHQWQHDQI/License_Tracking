@model License_Tracking.ViewModels.LicenseViewModel
ViewData["Title"] = "Delete License";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card border-danger">
                <div class="card-header bg-danger text-white">
                    <h3 class="card-title mb-0">
                        <i class="fas fa-exclamation-triangle"></i> Delete License
                    </h3>
                </div>
                <div class="card-body">
                    <div class="alert alert-warning">
                        <strong>Warning!</strong> Are you sure you want to delete this license? This action cannot be
                        undone.
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-5">@Html.DisplayNameFor(model => model.ProductName)</dt>
                                <dd class="col-sm-7">@Html.DisplayFor(model => model.ProductName)</dd>

                                <dt class="col-sm-5">@Html.DisplayNameFor(model => model.OemName)</dt>
                                <dd class="col-sm-7">@Html.DisplayFor(model => model.OemName)</dd>

                                <dt class="col-sm-5">@Html.DisplayNameFor(model => model.ClientName)</dt>
                                <dd class="col-sm-7">@Html.DisplayFor(model => model.ClientName)</dd>
                            </dl>
                        </div>
                        <div class="col-md-6">
                            <dl class="row">
                                <dt class="col-sm-5">@Html.DisplayNameFor(model => model.LicenseDate)</dt>
                                <dd class="col-sm-7">@Html.DisplayFor(model => model.LicenseDate)</dd>

                                <dt class="col-sm-5">@Html.DisplayNameFor(model => model.ExpiryDate)</dt>
                                <dd class="col-sm-7">@Html.DisplayFor(model => model.ExpiryDate)</dd>

                                <dt class="col-sm-5">@Html.DisplayNameFor(model => model.LicenseStatus)</dt>
                                <dd class="col-sm-7">
                                    <span
                                        class="badge bg-@(Model.LicenseStatus == "Active" ? "success" : Model.LicenseStatus == "Expired" ? "danger" : "warning")">
                                        @Html.DisplayFor(model => model.LicenseStatus)
                                    </span>
                                </dd>
                            </dl>
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-12">
                            <div class="card bg-light">
                                <div class="card-body">
                                    <h6 class="card-title">Financial Summary</h6>
                                    <div class="row">
                                        <div class="col-md-4">
                                            <small class="text-muted">Amount Received</small>
                                            <div class="fw-bold text-success">@Model.AmountReceived.ToString("C")</div>
                                        </div>
                                        <div class="col-md-4">
                                            <small class="text-muted">Amount Paid</small>
                                            <div class="fw-bold text-danger">@Model.AmountPaid.ToString("C")</div>
                                        </div>
                                        <div class="col-md-4">
                                            <small class="text-muted">Margin</small>
                                            <div class="fw-bold @(Model.Margin >= 0 ? "text-success" : "text-danger")">
                                                @Model.Margin.ToString("C")
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <form asp-action="Delete" method="post" class="d-flex justify-content-between mt-4">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Back to List
                        </a>
                        <div>
                            <a asp-action="Details" asp-route-id="@Model.LicenseId" class="btn btn-info me-2">
                                <i class="fas fa-eye"></i> View Details
                            </a>
                            <button type="submit" class="btn btn-danger">
                                <i class="fas fa-trash"></i> Confirm Delete
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
