@model object
@{
    ViewData["Title"] = "Deal Collaboration";
    var deal = ViewBag.Deal as License_Tracking.Models.Deal;
    var activities = ViewBag.Activities as List<License_Tracking.Models.DealCollaborationActivity>;
    var teamMembers = ViewBag.TeamMembers as List<string>;
}

<!-- Bigin.com-inspired Deal Collaboration Dashboard -->
<div class="container-fluid">
    <!-- Header Section -->
    <div class="row">
        <div class="col-12">
            <div class="bigin-page-header mb-4">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <div class="bigin-breadcrumb">
                            <a asp-controller="Deals" asp-action="Index" class="text-decoration-none text-muted">
                                <i class="fas fa-handshake"></i> Deals
                            </a>
                            <span class="mx-2 text-muted">›</span>
                            <span class="text-primary">@deal!.DealName</span>
                            <span class="mx-2 text-muted">›</span>
                            <span>Collaboration</span>
                        </div>
                        <h1 class="bigin-page-title">
                            <i class="fas fa-users text-primary"></i>
                            Deal Collaboration
                        </h1>
                        <p class="text-muted mb-0">Team collaboration and activity tracking for @deal.DealName</p>
                    </div>
                    <div class="bigin-action-buttons">
                        <a asp-controller="Deals" asp-action="Details" asp-route-id="@deal.DealId" class="btn bigin-btn-outline-primary">
                            <i class="fas fa-arrow-left"></i> Back to Deal
                        </a>
                        <button type="button" class="btn bigin-btn-primary" data-bs-toggle="modal" data-bs-target="#addActivityModal">
                            <i class="fas fa-plus"></i> Add Activity
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Deal Summary Cards -->
    <div class="row mb-4">
        <div class="col-md-3">
            <div class="bigin-card bigin-card-hover">
                <div class="card-body text-center">
                    <div class="bigin-metric-icon">
                        <i class="fas fa-building text-primary"></i>
                    </div>
                    <h6 class="card-title">@deal.Company?.CompanyName</h6>
                    <small class="text-muted">Customer</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="bigin-card bigin-card-hover">
                <div class="card-body text-center">
                    <div class="bigin-metric-icon">
                        <i class="fas fa-layer-group text-info"></i>
                    </div>
                    <h6 class="card-title">@deal.CurrentPhase</h6>
                    <small class="text-muted">Current Phase</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="bigin-card bigin-card-hover">
                <div class="card-body text-center">
                    <div class="bigin-metric-icon">
                        <i class="fas fa-user-tag text-warning"></i>
                    </div>
                    <h6 class="card-title">@(deal.AssignedTo ?? "Unassigned")</h6>
                    <small class="text-muted">Assigned To</small>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="bigin-card bigin-card-hover">
                <div class="card-body text-center">
                    <div class="bigin-metric-icon">
                        <i class="fas fa-chart-line text-success"></i>
                    </div>
                    <h6 class="card-title">@deal.CustomerInvoiceAmount?.ToString("C")</h6>
                    <small class="text-muted">Deal Value</small>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Activity Timeline -->
        <div class="col-md-8">
            <div class="bigin-card">
                <div class="card-header bigin-card-header">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">
                            <i class="fas fa-clock text-primary"></i> Activity Timeline
                        </h5>
                        <div>
                            <button type="button" class="btn btn-sm bigin-btn-outline-primary" onclick="addQuickComment()">
                                <i class="fas fa-comment"></i> Quick Comment
                            </button>
                            <a asp-action="Timeline" asp-route-dealId="@deal.DealId" class="btn btn-sm bigin-btn-outline-info">
                                <i class="fas fa-expand"></i> Full Timeline
                            </a>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    @if (activities?.Any() == true)
                    {
                        <div class="bigin-timeline">
                            @foreach (var activity in activities)
                            {
                                <div class="bigin-timeline-item">
                                    <div class="bigin-timeline-marker bg-@activity.ActivityColor">
                                        <i class="@activity.ActivityIcon"></i>
                                    </div>
                                    <div class="bigin-timeline-content">
                                        <div class="d-flex justify-content-between align-items-start">
                                            <div>
                                                <h6 class="mb-1">@activity.ActivityTitle</h6>
                                                <p class="text-muted mb-2">@activity.ActivityDescription</p>
                                                <div class="d-flex align-items-center gap-3">
                                                    <small class="text-muted">
                                                        <i class="fas fa-user"></i> @activity.PerformedBy
                                                    </small>
                                                    <small class="text-muted">
                                                        <i class="fas fa-clock"></i> @activity.ActivityDate.ToString("MMM dd, yyyy HH:mm")
                                                    </small>
                                                    @if (!string.IsNullOrEmpty(activity.AssignedTo))
                                                    {
                                                        <small class="text-muted">
                                                            <i class="fas fa-user-tag"></i> Assigned to @activity.AssignedTo
                                                        </small>
                                                    }
                                                </div>
                                            </div>
                                            <div class="text-end">
                                                <span class="badge bg-@activity.StatusColor">@activity.Status</span>
                                                @if (activity.Priority != "Medium")
                                                {
                                                    <span class="badge bg-@activity.PriorityColor ms-1">@activity.Priority</span>
                                                }
                                                @if (activity.Status != "Completed")
                                                {
                                                    <button type="button" class="btn btn-sm btn-outline-success ms-2" onclick="completeActivity(@activity.ActivityId)">
                                                        <i class="fas fa-check"></i>
                                                    </button>
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-comments fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">No activities yet</h5>
                            <p class="text-muted">Start collaborating by adding your first activity or comment</p>
                            <button type="button" class="btn bigin-btn-primary" data-bs-toggle="modal" data-bs-target="#addActivityModal">
                                <i class="fas fa-plus"></i> Add First Activity
                            </button>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Team & Quick Actions -->
        <div class="col-md-4">
            <!-- Team Members -->
            <div class="bigin-card mb-4">
                <div class="card-header bigin-card-header">
                    <h6 class="mb-0">
                        <i class="fas fa-users text-primary"></i> Team Members
                    </h6>
                </div>
                <div class="card-body">
                    @if (teamMembers?.Any() == true)
                    {
                        @foreach (var member in teamMembers)
                        {
                            <div class="d-flex align-items-center mb-2">
                                <div class="bigin-avatar bg-primary text-white me-3">
                                    @member.Substring(0, 1).ToUpper()
                                </div>
                                <div>
                                    <div class="fw-medium">@member</div>
                                    @if (member == deal.AssignedTo)
                                    {
                                        <small class="text-primary">
                                            <i class="fas fa-star"></i> Primary Assignee
                                        </small>
                                    }
                                    else
                                    {
                                        <small class="text-muted">Team Member</small>
                                    }
                                </div>
                            </div>
                        }
                    }
                    else
                    {
                        <p class="text-muted text-center">No team members assigned</p>
                    }
                    
                    <button type="button" class="btn btn-sm bigin-btn-outline-primary w-100 mt-2" data-bs-toggle="modal" data-bs-target="#reassignModal">
                        <i class="fas fa-user-edit"></i> Reassign Deal
                    </button>
                </div>
            </div>

            <!-- Quick Actions -->
            <div class="bigin-card">
                <div class="card-header bigin-card-header">
                    <h6 class="mb-0">
                        <i class="fas fa-bolt text-warning"></i> Quick Actions
                    </h6>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a asp-controller="DealInvoice" asp-action="Index" asp-route-dealId="@deal.DealId" class="btn bigin-btn-outline-success">
                            <i class="fas fa-file-invoice"></i> Manage Invoices
                        </a>
                        <a asp-controller="DealPhase" asp-action="Phase3LicenseDelivery" asp-route-id="@deal.DealId" class="btn bigin-btn-outline-info">
                            <i class="fas fa-key"></i> License Delivery
                        </a>
                        <a asp-controller="DealPhase" asp-action="Phase4OemSettlement" asp-route-id="@deal.DealId" class="btn bigin-btn-outline-warning">
                            <i class="fas fa-credit-card"></i> OEM Settlement
                        </a>
                        <button type="button" class="btn bigin-btn-outline-primary" onclick="sendEmail()">
                            <i class="fas fa-envelope"></i> Send Email
                        </button>
                        <a asp-action="ExportActivityReport" asp-route-dealId="@deal.DealId" class="btn bigin-btn-outline-secondary">
                            <i class="fas fa-download"></i> Export Report
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Add Activity Modal -->
<div class="modal fade" id="addActivityModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content bigin-modal">
            <div class="modal-header bigin-modal-header">
                <h5 class="modal-title">
                    <i class="fas fa-plus text-primary"></i> Add New Activity
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form asp-action="AddActivity" method="post">
                <input type="hidden" name="dealId" value="@deal.DealId" />
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Activity Type</label>
                                <select name="activityType" class="form-select" required>
                                    <option value="">Select Type</option>
                                    <option value="Comment">Comment</option>
                                    <option value="Status_Change">Status Change</option>
                                    <option value="Assignment">Assignment</option>
                                    <option value="Email_Sent">Email Sent</option>
                                    <option value="Call_Made">Call Made</option>
                                    <option value="Meeting_Scheduled">Meeting Scheduled</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Priority</label>
                                <select name="priority" class="form-select">
                                    <option value="Low">Low</option>
                                    <option value="Medium" selected>Medium</option>
                                    <option value="High">High</option>
                                    <option value="Critical">Critical</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Title</label>
                        <input type="text" name="title" class="form-control" required placeholder="Activity title">
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Description</label>
                        <textarea name="description" class="form-control" rows="3" placeholder="Activity description"></textarea>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Assign To</label>
                                <input type="text" name="assignedTo" class="form-control" placeholder="User name">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label class="form-label">Due Date</label>
                                <input type="datetime-local" name="dueDate" class="form-control">
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer bigin-modal-footer">
                    <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn bigin-btn-primary">
                        <i class="fas fa-plus"></i> Add Activity
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- Reassign Deal Modal -->
<div class="modal fade" id="reassignModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content bigin-modal">
            <div class="modal-header bigin-modal-header">
                <h5 class="modal-title">
                    <i class="fas fa-user-edit text-warning"></i> Reassign Deal
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <form asp-action="ReassignDeal" method="post">
                <input type="hidden" name="dealId" value="@deal.DealId" />
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Current Assignee</label>
                        <input type="text" class="form-control" value="@(deal.AssignedTo ?? "Unassigned")" readonly>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">New Assignee</label>
                        <input type="text" name="newAssignee" class="form-control" required placeholder="Enter username">
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Reason</label>
                        <textarea name="reason" class="form-control" rows="3" placeholder="Reason for reassignment"></textarea>
                    </div>
                </div>
                <div class="modal-footer bigin-modal-footer">
                    <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-warning">
                        <i class="fas fa-user-edit"></i> Reassign
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<script>
function completeActivity(activityId) {
    if (confirm('Mark this activity as completed?')) {
        var form = document.createElement('form');
        form.method = 'POST';
        form.action = '@Url.Action("UpdateActivityStatus")';
        
        var activityIdInput = document.createElement('input');
        activityIdInput.type = 'hidden';
        activityIdInput.name = 'activityId';
        activityIdInput.value = activityId;
        
        var statusInput = document.createElement('input');
        statusInput.type = 'hidden';
        statusInput.name = 'status';
        statusInput.value = 'Completed';
        
        var tokenInput = document.createElement('input');
        tokenInput.type = 'hidden';
        tokenInput.name = '__RequestVerificationToken';
        tokenInput.value = $('input[name="__RequestVerificationToken"]').val();
        
        form.appendChild(activityIdInput);
        form.appendChild(statusInput);
        form.appendChild(tokenInput);
        
        document.body.appendChild(form);
        form.submit();
    }
}

function addQuickComment() {
    var comment = prompt('Enter your comment:');
    if (comment && comment.trim()) {
        $.post('@Url.Action("AddQuickComment")', {
            dealId: @deal.DealId,
            comment: comment.trim(),
            __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
        }).done(function() {
            location.reload();
        }).fail(function() {
            alert('Error adding comment. Please try again.');
        });
    }
}

function sendEmail() {
    // Placeholder for email functionality
    alert('Email functionality will be implemented in future phase');
}
</script>

<style>
.bigin-timeline {
    position: relative;
    padding-left: 30px;
}

.bigin-timeline::before {
    content: '';
    position: absolute;
    left: 15px;
    top: 0;
    bottom: 0;
    width: 2px;
    background: #e9ecef;
}

.bigin-timeline-item {
    position: relative;
    margin-bottom: 30px;
}

.bigin-timeline-marker {
    position: absolute;
    left: -23px;
    top: 5px;
    width: 30px;
    height: 30px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-size: 12px;
}

.bigin-timeline-content {
    background: #f8f9fa;
    border-radius: 8px;
    padding: 15px;
    border: 1px solid #e9ecef;
}

.bigin-avatar {
    width: 32px;
    height: 32px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: bold;
    font-size: 14px;
}
</style>
