@model License_Tracking.Models.Activity

@{
    ViewData["Title"] = "Create Activity";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0"><i class="fas fa-plus"></i> Create New Activity</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="Subject" class="form-label">Subject *</label>
                                <input asp-for="Subject" class="form-control" placeholder="Enter activity subject"
                                    required />
                                <span asp-validation-for="Subject" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="ActivityType" class="form-label">Activity Type *</label>
                                <select asp-for="ActivityType" class="form-select" required>
                                    <option value="">Select Type</option>
                                    @foreach (var type in ViewBag.ActivityTypes)
                                    {
                                        <option value="@type">@type</option>
                                    }
                                </select>
                                <span asp-validation-for="ActivityType" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="RelatedEntityType" class="form-label">Related To</label>
                                <select asp-for="RelatedEntityType" class="form-select">
                                    <option value="Deal">Deal</option>
                                    <option value="Company">Company</option>
                                    <option value="Contact">Contact</option>
                                </select>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="RelatedEntityId" class="form-label">Entity ID</label>
                                <input asp-for="RelatedEntityId" class="form-control" type="number" />
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">Description</label>
                            <textarea asp-for="Description" class="form-control" rows="3"
                                placeholder="Activity details..."></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-4">
                                <label asp-for="ActivityDate" class="form-label">Activity Date *</label>
                                <input asp-for="ActivityDate" class="form-control" type="datetime-local" required />
                                <span asp-validation-for="ActivityDate" class="text-danger"></span>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="DueDate" class="form-label">Due Date</label>
                                <input asp-for="DueDate" class="form-control" type="datetime-local" />
                                <span asp-validation-for="DueDate" class="text-danger"></span>
                            </div>
                            <div class="col-md-4">
                                <label asp-for="Priority" class="form-label">Priority</label>
                                <select asp-for="Priority" class="form-select">
                                    @foreach (var priority in ViewBag.Priorities)
                                    {
                                        <option value="@priority" selected="@(priority == "Medium")">@priority</option>
                                    }
                                </select>
                            </div>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="AssignedTo" class="form-label">Assigned To</label>
                                <select asp-for="AssignedTo" class="form-select">
                                    @foreach (var user in ViewBag.Users)
                                    {
                                        <option value="@user">@user</option>
                                    }
                                </select>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Status" class="form-label">Status</label>
                                <select asp-for="Status" class="form-select">
                                    <option value="Pending">Pending</option>
                                    <option value="Completed">Completed</option>
                                    <option value="Cancelled">Cancelled</option>
                                </select>
                            </div>
                        </div>

                        <div class="text-end">
                            <a asp-action="Index" class="btn btn-secondary">
                                <i class="fas fa-arrow-left"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-save"></i> Create Activity
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
