@model IEnumerable<dynamic>

@{
    ViewData["Title"] = "Aging Summary";
}

<div class="container">
    <h2><i class="fas fa-chart-line"></i> Aging Summary</h2>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Invoice Number</th>
                <th>Client Name</th>
                <th>Product Name</th>
                <th>Amount</th>
                <th>Amount Received</th>
                <th>Outstanding</th>
                <th>Due Date</th>
                <th>Days Overdue</th>
                <th>Status</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                var outstanding = item.Amount - item.AmountReceived;
                <tr class="@(item.DaysOverdue > 0 ? "table-danger" : item.DaysOverdue > -7 ? "table-warning" : "")">
                    <td>@item.InvoiceNumber</td>
                    <td>@item.ClientName</td>
                    <td>@item.ProductName</td>
                    <td>@item.Amount.ToString("C")</td>
                    <td>@item.AmountReceived.ToString("C")</td>
                    <td>@outstanding.ToString("C")</td>
                    <td>@item.DueDate.ToString("yyyy-MM-dd")</td>
                    <td>
                        @if (item.DaysOverdue > 0)
                        {
                            <span class="badge bg-danger">@item.DaysOverdue days</span>
                        }
                        else if (item.DaysOverdue > -7)
                        {
                            <span class="badge bg-warning">Due soon</span>
                        }
                        else
                        {
                            <span class="badge bg-success">@Math.Abs(item.DaysOverdue) days remaining</span>
                        }
                    </td>
                    <td>
                        <span class="badge @(item.PaymentStatus == "Completed" ? "bg-success" : item.PaymentStatus == "Partial" ? "bg-warning" : "bg-secondary")">
                            @item.PaymentStatus
                        </span>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <a asp-action="PaymentStatus" class="btn btn-secondary">
        <i class="fas fa-arrow-left"></i> Back to Payment Status
    </a>
</div>