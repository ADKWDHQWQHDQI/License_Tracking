@model IEnumerable<License_Tracking.Models.AlertConfiguration>

@{
    ViewData["Title"] = "Alert Configuration Management";
}

@section Styles {
    <style>
        .config-card {
            transition: all 0.3s ease;
            cursor: pointer;
        }
        .config-card:hover {
            transform: translateY(-2px);
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        }
        .default-badge {
            background: linear-gradient(45deg, #28a745, #20c997);
        }
        .threshold-badge {
            margin: 2px;
        }
    </style>
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h3 class="card-title mb-0">
                        <i class="fas fa-bell-slash"></i> Alert Configuration Management
                    </h3>
                    <a asp-action="Create" class="btn btn-primary">
                        <i class="fas fa-plus"></i> Create New Configuration
                    </a>
                </div>
                <div class="card-body">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <i class="fas fa-exclamation-circle"></i> @TempData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @if (!Model.Any())
                    {
                        <div class="text-center py-5">
                            <i class="fas fa-bell-slash fa-3x text-muted mb-3"></i>
                            <h4>No Alert Configurations Found</h4>
                            <p class="text-muted">Create your first alert configuration to get started.</p>
                            <a asp-action="Create" class="btn btn-primary btn-lg">
                                <i class="fas fa-plus"></i> Create First Configuration
                            </a>
                        </div>
                    }
                    else
                    {
                        <div class="row">
                            @foreach (var item in Model)
                            {
                                <div class="col-md-6 col-lg-4 mb-4">
                                    <div class="card config-card h-100 @(item.IsDefault ? "border-success" : "")">
                                        <div class="card-header">
                                            <div class="d-flex justify-content-between align-items-center">
                                                <h5 class="card-title mb-0">@item.ConfigurationName</h5>
                                                @if (item.IsDefault)
                                                {
                                                    <span class="badge default-badge">
                                                        <i class="fas fa-star"></i> Default
                                                    </span>
                                                }
                                            </div>
                                        </div>
                                        <div class="card-body">
                                            @if (!string.IsNullOrEmpty(item.Description))
                                            {
                                                <p class="text-muted">@item.Description</p>
                                            }
                                            
                                            <div class="mb-3">
                                                <strong>Alert Thresholds (Days):</strong><br>
                                                @foreach (var threshold in item.GetThresholds())
                                                {
                                                    <span class="badge bg-info threshold-badge">@threshold</span>
                                                }
                                            </div>
                                            
                                            <div class="mb-3">
                                                <small class="text-muted">
                                                    <i class="fas fa-calendar"></i> Created: @item.CreatedDate.ToString("MMM dd, yyyy")
                                                    @if (!string.IsNullOrEmpty(item.CreatedBy))
                                                    {
                                                        <span> by @item.CreatedBy</span>
                                                    }
                                                </small>
                                            </div>

                                            <div class="mb-2">
                                                <span class="badge @(item.IsActive ? "bg-success" : "bg-secondary")">
                                                    <i class="fas @(item.IsActive ? "fa-check" : "fa-times")"></i>
                                                    @(item.IsActive ? "Active" : "Inactive")
                                                </span>
                                            </div>
                                        </div>
                                        <div class="card-footer">
                                            <div class="btn-group w-100" role="group">
                                                <a asp-action="Details" asp-route-id="@item.AlertConfigurationId" 
                                                   class="btn btn-outline-info btn-sm">
                                                    <i class="fas fa-eye"></i> Details
                                                </a>
                                                <a asp-action="Edit" asp-route-id="@item.AlertConfigurationId" 
                                                   class="btn btn-outline-primary btn-sm">
                                                    <i class="fas fa-edit"></i> Edit
                                                </a>
                                                @if (!item.IsDefault)
                                                {
                                                    <form asp-action="SetAsDefault" asp-route-id="@item.AlertConfigurationId" 
                                                          method="post" style="display: inline;" 
                                                          onsubmit="return confirm('Set this as the default alert configuration?');">
                                                        @Html.AntiForgeryToken()
                                                        <button type="submit" class="btn btn-outline-success btn-sm">
                                                            <i class="fas fa-star"></i> Set Default
                                                        </button>
                                                    </form>
                                                }
                                                <a asp-action="Delete" asp-route-id="@item.AlertConfigurationId" 
                                                   class="btn btn-outline-danger btn-sm">
                                                    <i class="fas fa-trash"></i> Delete
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Auto-dismiss alerts after 5 seconds
        setTimeout(function() {
            $('.alert').fadeOut('slow');
        }, 5000);
    </script>
}
